<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 圾时达约</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .navbar.navbar-inverse {
            padding-top: 25px;
            min-height: 100px;
            background-color: #222;
        }

        .navbar-nav {
            display: flex;
            align-items: center;
            width: 100%;
            justify-content: center;
        }

        .nav-container {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
        }

        .diamond-nav {
            transform: rotate(45deg);
            width: 90px;
            height: 90px;
            background-color: #222;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 2px solid #9d9d9d;
            margin: 0 25px;
            position: relative;
            top: -8px;
        }

        .diamond-text {
            transform: rotate(-45deg);
            color: #9d9d9d;
            font-weight: bold;
            font-size: 22px;
            text-decoration: none;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
            line-height: 1;
            text-align: center;
        }

            .diamond-text span {
                display: block;
                margin: 1px 0;
                padding: 1px 0;
            }

        .diamond-nav:hover {
            background-color: #333;
            border-color: white;
        }

            .diamond-nav:hover .diamond-text {
                color: white;
            }

        .normal-nav a {
            font-size: 18px;
            padding: 12px 18px;
            font-weight: bold;
            color: #9d9d9d !important;
        }

            .normal-nav a:hover {
                color: white !important;
                background-color: transparent !important;
            }

        .normal-nav {
            margin: 0 8px;
        }

        .left-navs, .right-navs {
            display: flex;
            align-items: center;
        }

        .navbar-collapse.collapse {
            display: flex !important;
        }

        .container.body-content {
            margin-top: 120px;
        }

        /* 新增：登录提示链接样式 */
        .login-prompt {
            text-align: right;
            padding: 5px 15px;
            background-color: #f8f8f8;
            border-bottom: 1px solid #e7e7e7;
        }

            .login-prompt a {
                color: #337ab7;
                text-decoration: none;
                font-size: 14px;
            }

                .login-prompt a:hover {
                    text-decoration: underline;
                }

        @@media (max-width: 992px) {
            .normal-nav a {
                font-size: 16px;
                padding: 10px 14px;
            }

            .diamond-nav {
                width: 80px;
                height: 80px;
                margin: 0 20px;
            }

            .diamond-text {
                font-size: 20px;
            }
        }

        @@media (max-width: 768px) {
            .navbar.navbar-inverse {
                padding-top: 15px;
                min-height: auto;
            }

            .navbar-header {
                display: block;
            }

            .navbar-collapse.collapse {
                display: none !important;
            }

                .navbar-collapse.collapse.in {
                    display: flex !important;
                    flex-direction: column;
                }

            .nav-container {
                flex-direction: column;
            }

            .diamond-nav {
                margin: 20px 0;
                order: -1;
            }

            .container.body-content {
                margin-top: 30px;
            }

            .login-prompt {
                text-align: center;
            }
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <div class="nav-container">
                        <div class="left-navs">
                    <li class="normal-nav">@Html.ActionLink("首页", "Index", "Home")</li>
                    <li class="normal-nav">@Html.ActionLink("我的订单", "Order", "Home")</li>
                    <li class="normal-nav">@Html.ActionLink("我的消息", "Message", "Home")</li>
            </div>

            <li class="diamond-nav">
                <a href="@Url.Action("Index", "Home")" class="diamond-text">
                    <span>圾时</span>
                    <span>达约</span>
                </a>
            </li>

            <div class="right-navs">
                <li class="normal-nav">@Html.ActionLink("帮助中心", "Help", "Home")</li>
                <li class="normal-nav">@Html.ActionLink("问题反馈", "Feedback", "Home")</li>
                <li class="normal-nav">@Html.ActionLink("个人中心", "Profile", "Home")</li>
            </div>
        </div>
        </ul>
    </div>
    </div>
    </div>

    <!-- 新增：登录提示链接 -->
    <div class="login-prompt">
        <div class="container">
            @Html.ActionLink("操作前，请先登录", "Login", "Account")
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 圾时达约</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>