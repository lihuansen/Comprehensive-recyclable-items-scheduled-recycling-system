<!DOCTYPE html>
<html>
<head>
    <!-- 引入Bootstrap CSS（CDN方式，无需下载本地文件） -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 圾时达约</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            padding-top: 120px; /* 调整上边距以适应导航栏 */
        }

        .navbar.navbar-inverse {
            padding-top: 25px;
            min-height: 100px;
            background-color: #222;
        }

        .navbar-nav {
            display: flex;
            align-items: center;
            width: 100%;
            justify-content: center;
        }

        .nav-container {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
        }

        .diamond-nav {
            transform: rotate(45deg);
            width: 90px;
            height: 90px;
            background-color: #222;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 2px solid #9d9d9d;
            margin: 0 25px;
            position: relative;
            top: -8px;
        }

        .diamond-text {
            transform: rotate(-45deg);
            color: #9d9d9d;
            font-weight: bold;
            font-size: 22px;
            text-decoration: none;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
            line-height: 1;
            text-align: center;
        }

            .diamond-text span {
                display: block;
                margin: 1px 0;
                padding: 1px 0;
            }

        .diamond-nav:hover {
            background-color: #333;
            border-color: white;
        }

            .diamond-nav:hover .diamond-text {
                color: white;
            }

        .normal-nav a {
            font-size: 18px;
            padding: 12px 18px;
            font-weight: bold;
            color: #9d9d9d !important;
        }

            .normal-nav a:hover {
                color: white !important;
                background-color: transparent !important;
            }

        .normal-nav {
            margin: 0 8px;
        }

        .left-navs, .right-navs {
            display: flex;
            align-items: center;
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .navbar-collapse.collapse {
            display: flex !important;
        }

        .container.body-content {
            margin-top: 0;
        }

        /* 修改：登录状态样式 */
        .navbar-user-info {
            position: absolute;
            right: 15px;
            top: 15px;
            z-index: 1001;
            color: #9d9d9d;
        }

            .navbar-user-info a {
                color: #9d9d9d !important;
                text-decoration: none;
                font-size: 14px;
                padding: 5px 10px;
                margin-left: 10px;
                border: 1px solid #9d9d9d;
                border-radius: 3px;
                transition: all 0.3s;
            }

                .navbar-user-info a:hover {
                    color: white !important;
                    border-color: white;
                }

        @@media (max-width: 992px) {
            .normal-nav a {
                font-size: 16px;
                padding: 10px 14px;
            }

            .diamond-nav {
                width: 80px;
                height: 80px;
                margin: 0 20px;
            }

            .diamond-text {
                font-size: 20px;
            }

            .navbar-user-info {
                top: 10px;
                right: 10px;
            }
        }

        @@media (max-width: 768px) {
            body {
                padding-top: 80px;
            }

            .navbar.navbar-inverse {
                padding-top: 15px;
                min-height: auto;
            }

            .navbar-header {
                display: block;
            }

            .navbar-collapse.collapse {
                display: none !important;
            }

                .navbar-collapse.collapse.in {
                    display: flex !important;
                    flex-direction: column;
                }

            .nav-container {
                flex-direction: column;
            }

            .diamond-nav {
                margin: 20px 0;
                order: -1;
            }

            .container.body-content {
                margin-top: 0;
            }
            /* 移动设备上调整登录信息位置 */
            .navbar-user-info {
                position: static;
                text-align: center;
                margin-top: 10px;
                padding-bottom: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <!-- 用户信息区域 -->
            <div class="navbar-user-info">
                @if (Session["LoginStaff"] != null)
                {
                    var recycler = (recycling.Model.Recyclers)Session["LoginStaff"];
                    <span>您好，回收员：@recycler.Username</span>
                    @Html.ActionLink("退出登录", "Logout", "Staff")
                }
            </div>

            <div class="navbar-collapse collapse">
                <div class="nav-container">
                    <ul class="left-navs">
                        <li class="normal-nav">@Html.ActionLink("用户管理", "UserManagement", "Staff")</li>
                        <li class="normal-nav">@Html.ActionLink("回收员管理", "RecyclerManagement", "Staff")</li>
                    </ul>

                    <div class="diamond-nav">
                        <a href="@Url.Action("AdminDashboard", "Staff")" class="diamond-text">
                            <span>管理员</span>
                            <span>工作台</span>
                        </a>
                    </div>

                    <ul class="right-navs">
                        <li class="normal-nav">@Html.ActionLink("订单管理", "Admin_OrderManagement", "Staff")</li>
                        <li class="normal-nav">@Html.ActionLink("首页管理", "HomepageManagement", "Staff")</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - 圾时达约 - 回收员系统</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>