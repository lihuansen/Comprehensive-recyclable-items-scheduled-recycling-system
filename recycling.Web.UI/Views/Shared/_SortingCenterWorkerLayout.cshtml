<!DOCTYPE html>
<html>
<head>
    <!-- 引入Bootstrap CSS（CDN方式，无需下载本地文件） -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 圾时达约</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            padding-top: 120px; /* 调整上边距以适应导航栏 */
        }

        .navbar.navbar-inverse {
            padding-top: 25px;
            min-height: 100px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .navbar-nav {
            display: flex;
            align-items: center;
            width: 100%;
            justify-content: center;
        }

        .nav-container {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
        }

        .diamond-nav {
            transform: rotate(45deg);
            width: 90px;
            height: 90px;
            background: linear-gradient(135deg, #5a6fd8 0%, #6a3d92 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            border: 2px solid rgba(255, 255, 255, 0.8);
            margin: 0 25px;
            position: relative;
            top: -8px;
        }

        .diamond-text {
            transform: rotate(-45deg);
            color: rgba(255, 255, 255, 0.95);
            font-weight: bold;
            font-size: 22px;
            text-decoration: none;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
            line-height: 1;
            text-align: center;
        }

            .diamond-text span {
                display: block;
                margin: 1px 0;
                padding: 1px 0;
            }

        .diamond-nav:hover {
            background: linear-gradient(135deg, #4e5fc8 0%, #5a2d82 100%);
            border-color: white;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
        }

            .diamond-nav:hover .diamond-text {
                color: white;
            }

        .normal-nav a {
            font-size: 18px;
            padding: 12px 18px;
            font-weight: bold;
            color: rgba(255, 255, 255, 0.9) !important;
        }

            .normal-nav a:hover {
                color: white !important;
                background-color: rgba(255, 255, 255, 0.1) !important;
                border-radius: 8px;
            }

        .normal-nav {
            margin: 0 8px;
            position: relative;
        }

        .notification-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            background-color: #e74c3c;
            color: white;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            font-size: 12px;
            font-weight: bold;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 10;
        }

        .left-navs, .right-navs {
            display: flex;
            align-items: center;
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .navbar-collapse.collapse {
            display: flex !important;
        }

        .container.body-content {
            margin-top: 0;
        }

        /* 修改：登录状态样式 */
        .navbar-user-info {
            position: absolute;
            right: 15px;
            top: 15px;
            z-index: 1001;
            color: rgba(255, 255, 255, 0.9);
        }

            .navbar-user-info a {
                color: rgba(255, 255, 255, 0.9) !important;
                text-decoration: none;
                font-size: 14px;
                padding: 5px 10px;
                margin-left: 10px;
                border: 1px solid rgba(255, 255, 255, 0.7);
                border-radius: 3px;
                transition: all 0.3s;
            }

                .navbar-user-info a:hover {
                    color: white !important;
                    border-color: white;
                    background-color: rgba(255, 255, 255, 0.1);
                }

        @@media (max-width: 992px) {
            .normal-nav a {
                font-size: 16px;
                padding: 10px 14px;
            }

            .diamond-nav {
                width: 80px;
                height: 80px;
                margin: 0 20px;
            }

            .diamond-text {
                font-size: 20px;
            }

            .navbar-user-info {
                top: 10px;
                right: 10px;
            }
        }

        @@media (max-width: 768px) {
            body {
                padding-top: 80px;
            }

            .navbar.navbar-inverse {
                padding-top: 15px;
                min-height: auto;
            }

            .navbar-header {
                display: block;
            }

            .navbar-collapse.collapse {
                display: none !important;
            }

                .navbar-collapse.collapse.in {
                    display: flex !important;
                    flex-direction: column;
                }

            .nav-container {
                flex-direction: column;
            }

            .diamond-nav {
                margin: 20px 0;
                order: -1;
            }

            .container.body-content {
                margin-top: 0;
            }
            /* 移动设备上调整登录信息位置 */
            .navbar-user-info {
                position: static;
                text-align: center;
                margin-top: 10px;
                padding-bottom: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <!-- 用户信息区域 -->
            <div class="navbar-user-info">
                @if (Session["LoginStaff"] != null)
                {
                    var worker = (recycling.Model.SortingCenterWorkers)Session["LoginStaff"];
                    <span>您好，基地工作人员：@worker.Username</span>
                    @Html.ActionLink("退出登录", "Logout", "Staff")
                }
            </div>

            <div class="navbar-collapse collapse">
                <div class="nav-container">
                    <ul class="left-navs">
                        <li class="normal-nav">
                            @Html.ActionLink("基地管理", "BaseManagement", "Staff")
                        </li>
                    </ul>

                    <div class="diamond-nav">
                        <a href="@Url.Action("SortingCenterWorkerDashboard", "Staff")" class="diamond-text">
                            <span>基地</span>
                            <span>工作台</span>
                        </a>
                    </div>

                    <ul class="right-navs">
                        <li class="normal-nav">
                            <a href="@Url.Action("SortingCenterWorkerMessageCenter", "Staff")" style="position: relative;">
                                消息中心
                                <span id="messageBadge" class="badge" style="display: none; position: absolute; top: -5px; right: -10px; background-color: #d9534f; color: white; border-radius: 10px; padding: 2px 6px; font-size: 11px; font-weight: bold;"></span>
                            </a>
                        </li>
                        <li class="normal-nav">@Html.ActionLink("账号管理", "SortingCenterWorkerProfile", "Staff")</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - 圾时达约 - 基地系统</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Html.AntiForgeryToken()
    <script>
        // 更新消息徽章
        function updateMessageBadge(count) {
            var badge = document.getElementById('messageBadge');
            if (badge) {
                if (count && count > 0) {
                    badge.textContent = count > 99 ? '99+' : count;
                    badge.style.display = 'inline-block';
                } else {
                    badge.style.display = 'none';
                }
            }
        }

        // 辅助函数：添加防伪令牌到POST请求
        function postWithTokenInLayout(url, data, successCallback) {
            var token = $('input[name="__RequestVerificationToken"]').val();
            var requestData = data || {};
            requestData.__RequestVerificationToken = token;
            return $.post(url, requestData, successCallback);
        }

        // 页面加载时获取未读消息数量
        $(document).ready(function () {
            postWithTokenInLayout('@Url.Action("GetBaseStaffUnreadNotificationCount", "Staff")', {}, function (data) {
                if (data.success) {
                    updateMessageBadge(data.count);
                }
            });

            // 每30秒更新一次
            setInterval(function () {
                postWithTokenInLayout('@Url.Action("GetBaseStaffUnreadNotificationCount", "Staff")', {}, function (data) {
                    if (data.success) {
                        updateMessageBadge(data.count);
                    }
                });
            }, 30000);
        });

        // 将函数暴露到全局作用域，以便其他页面调用
        window.updateMessageBadge = updateMessageBadge;
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
