@{
    ViewBag.Title = "问题反馈";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .feedback-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 20px;
    }

    .feedback-header {
        background: linear-gradient(135deg, #ff6b6b 0%, #feca57 100%);
        color: white;
        padding: 30px;
        border-radius: 15px 15px 0 0;
        text-align: center;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .feedback-header h2 {
        margin: 0;
        font-size: 28px;
        font-weight: 600;
    }

    .feedback-header p {
        margin: 10px 0 0 0;
        opacity: 0.9;
        font-size: 14px;
    }

    .feedback-card {
        background: white;
        padding: 40px;
        border-radius: 0 0 15px 15px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .form-group-custom {
        margin-bottom: 25px;
    }

    .form-group-custom label {
        display: block;
        margin-bottom: 8px;
        font-weight: 600;
        color: #2c3e50;
        font-size: 14px;
    }

    .form-group-custom label .required {
        color: #e74c3c;
        margin-left: 2px;
    }

    .feedback-type-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 15px;
        margin-bottom: 25px;
    }

    .feedback-type-option {
        position: relative;
    }

    .feedback-type-option input[type="radio"] {
        position: absolute;
        opacity: 0;
    }

    .feedback-type-option label {
        display: block;
        padding: 15px;
        background: #f8f9fa;
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s ease;
        font-weight: 500;
    }

    .feedback-type-option input[type="radio"]:checked + label {
        background: linear-gradient(135deg, #ff6b6b 0%, #feca57 100%);
        color: white;
        border-color: #ff6b6b;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(255, 107, 107, 0.3);
    }

    .feedback-type-option label:hover {
        border-color: #ff6b6b;
        transform: translateY(-1px);
    }

    .form-control-custom {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        font-size: 14px;
        transition: all 0.3s ease;
    }

    .form-control-custom:focus {
        outline: none;
        border-color: #ff6b6b;
        box-shadow: 0 0 0 3px rgba(255, 107, 107, 0.1);
    }

    textarea.form-control-custom {
        resize: vertical;
        min-height: 150px;
        font-family: inherit;
    }

    .char-counter {
        text-align: right;
        font-size: 12px;
        color: #7f8c8d;
        margin-top: 5px;
    }

    .char-counter.warning {
        color: #e74c3c;
    }

    .btn-submit-feedback {
        width: 100%;
        padding: 15px;
        background: linear-gradient(135deg, #ff6b6b 0%, #feca57 100%);
        color: white;
        border: none;
        border-radius: 10px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(255, 107, 107, 0.3);
    }

    .btn-submit-feedback:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(255, 107, 107, 0.4);
    }

    .btn-submit-feedback:disabled {
        opacity: 0.6;
        cursor: not-allowed;
        transform: none;
    }

    .alert-custom {
        padding: 15px 20px;
        border-radius: 10px;
        margin-bottom: 20px;
        display: none;
    }

    .alert-custom.alert-success {
        background: #d4edda;
        color: #155724;
        border-left: 4px solid #28a745;
    }

    .alert-custom.alert-error {
        background: #f8d7da;
        color: #721c24;
        border-left: 4px solid #dc3545;
    }

    .contact-footer {
        text-align: center;
        margin-top: 30px;
        padding: 20px;
        background: #f8f9fa;
        border-radius: 10px;
    }

    .contact-footer p {
        margin: 5px 0;
        color: #7f8c8d;
        font-size: 14px;
    }

    .contact-footer a {
        color: #ff6b6b;
        text-decoration: none;
        font-weight: 600;
    }

    .contact-footer a:hover {
        text-decoration: underline;
    }
</style>

<div class="feedback-container">
    <div class="feedback-header">
        <h2><i class="fas fa-comments"></i> 问题反馈</h2>
        <p>您的反馈对我们非常重要，帮助我们提供更好的服务</p>
    </div>

    <div class="feedback-card">
        <div id="alertMessage" class="alert-custom"></div>

        <form id="feedbackForm">
            <div class="form-group-custom">
                <label>反馈类型<span class="required">*</span></label>
                <div class="feedback-type-grid">
                    <div class="feedback-type-option">
                        <input type="radio" id="type1" name="feedbackType" value="问题反馈" required>
                        <label for="type1"><i class="fas fa-bug"></i> 问题反馈</label>
                    </div>
                    <div class="feedback-type-option">
                        <input type="radio" id="type2" name="feedbackType" value="功能建议" required>
                        <label for="type2"><i class="fas fa-lightbulb"></i> 功能建议</label>
                    </div>
                    <div class="feedback-type-option">
                        <input type="radio" id="type3" name="feedbackType" value="投诉举报" required>
                        <label for="type3"><i class="fas fa-exclamation-triangle"></i> 投诉举报</label>
                    </div>
                    <div class="feedback-type-option">
                        <input type="radio" id="type4" name="feedbackType" value="其他" required>
                        <label for="type4"><i class="fas fa-ellipsis-h"></i> 其他</label>
                    </div>
                </div>
            </div>

            <div class="form-group-custom">
                <label for="subject">反馈主题<span class="required">*</span></label>
                <input type="text" id="subject" name="subject" class="form-control-custom" 
                       placeholder="请简要描述您的问题或建议" maxlength="100" required>
                <div class="char-counter">
                    <span id="subjectCounter">0</span> / 100
                </div>
            </div>

            <div class="form-group-custom">
                <label for="description">详细描述<span class="required">*</span></label>
                <textarea id="description" name="description" class="form-control-custom" 
                          placeholder="请详细描述您遇到的问题或建议的详细内容" 
                          maxlength="1000" required></textarea>
                <div class="char-counter">
                    <span id="descCounter">0</span> / 1000
                </div>
            </div>

            <div class="form-group-custom">
                <label for="contactEmail">联系邮箱（选填）</label>
                <input type="email" id="contactEmail" name="contactEmail" class="form-control-custom" 
                       placeholder="如果需要回复，请留下您的邮箱">
            </div>

            <button type="submit" id="submitBtn" class="btn-submit-feedback">
                <i class="fas fa-paper-plane"></i> 提交反馈
            </button>
        </form>
    </div>

    <div class="contact-footer">
        <p><i class="fas fa-info-circle"></i> 我们会认真对待每一条反馈</p>
        <p>如有紧急问题，请联系客服：<a href="mailto:support@example.com">support@example.com</a></p>
    </div>
</div>

<script>
    $(document).ready(function() {
        // 字符计数器
        $('#subject').on('input', function() {
            var length = $(this).val().length;
            $('#subjectCounter').text(length);
            if (length >= 90) {
                $('#subjectCounter').parent().addClass('warning');
            } else {
                $('#subjectCounter').parent().removeClass('warning');
            }
        });

        $('#description').on('input', function() {
            var length = $(this).val().length;
            $('#descCounter').text(length);
            if (length >= 900) {
                $('#descCounter').parent().addClass('warning');
            } else {
                $('#descCounter').parent().removeClass('warning');
            }
        });

        // 表单提交
        $('#feedbackForm').on('submit', function(e) {
            e.preventDefault();

            var feedbackType = $('input[name="feedbackType"]:checked').val();
            var subject = $('#subject').val().trim();
            var description = $('#description').val().trim();
            var contactEmail = $('#contactEmail').val().trim();

            // 客户端验证
            if (!feedbackType) {
                showAlert('请选择反馈类型', 'error');
                return;
            }

            if (!subject) {
                showAlert('请输入反馈主题', 'error');
                return;
            }

            if (subject.length > 100) {
                showAlert('反馈主题不能超过100字', 'error');
                return;
            }

            if (!description) {
                showAlert('请输入详细描述', 'error');
                return;
            }

            if (description.length < 10) {
                showAlert('详细描述至少需要10个字符', 'error');
                return;
            }

            if (description.length > 1000) {
                showAlert('详细描述不能超过1000字', 'error');
                return;
            }

            // 禁用提交按钮
            $('#submitBtn').prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> 提交中...');

            // 提交反馈
            $.ajax({
                url: '/Home/SubmitFeedback',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({
                    FeedbackType: feedbackType,
                    Subject: subject,
                    Description: description,
                    ContactEmail: contactEmail
                }),
                success: function(response) {
                    if (response.success) {
                        showAlert('反馈提交成功！感谢您的反馈', 'success');
                        // 清空表单
                        $('#feedbackForm')[0].reset();
                        $('#subjectCounter').text('0');
                        $('#descCounter').text('0');
                        // 2秒后跳转
                        setTimeout(function() {
                            window.location.href = '/Home/Index';
                        }, 2000);
                    } else {
                        showAlert(response.message || '提交失败，请重试', 'error');
                        $('#submitBtn').prop('disabled', false).html('<i class="fas fa-paper-plane"></i> 提交反馈');
                    }
                },
                error: function() {
                    showAlert('提交失败，请检查网络连接后重试', 'error');
                    $('#submitBtn').prop('disabled', false).html('<i class="fas fa-paper-plane"></i> 提交反馈');
                }
            });
        });

        function showAlert(message, type) {
            var alertDiv = $('#alertMessage');
            alertDiv.removeClass('alert-success alert-error');
            alertDiv.addClass('alert-' + type);
            alertDiv.text(message);
            alertDiv.fadeIn();

            setTimeout(function() {
                alertDiv.fadeOut();
            }, 5000);
        }
    });
</script>
