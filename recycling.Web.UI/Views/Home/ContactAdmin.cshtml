@{
    ViewBag.Title = "联系管理员";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .chat-container {
        max-width: 900px;
        margin: 40px auto;
        padding: 20px;
    }

    .chat-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 20px 30px;
        border-radius: 15px 15px 0 0;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .chat-header h2 {
        margin: 0;
        font-size: 24px;
        font-weight: 600;
    }

    .request-notice {
        background: white;
        border-radius: 0 0 15px 15px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        padding: 40px;
        text-align: center;
    }

    .request-notice .icon {
        font-size: 64px;
        color: #667eea;
        margin-bottom: 20px;
    }

    .request-notice h3 {
        color: #333;
        margin-bottom: 15px;
    }

    .request-notice p {
        color: #666;
        font-size: 16px;
        line-height: 1.6;
        margin-bottom: 20px;
    }

    .chat-body {
        display: flex;
        flex-direction: column;
        background: white;
        border-radius: 0 0 15px 15px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        height: 600px;
    }

    .chat-main {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .waiting-notice {
        display: none;
    }

    .chat-messages {
        flex: 1;
        padding: 20px;
        overflow-y: auto;
        background-color: #f8f9fa;
    }

    .message-wrapper {
        margin-bottom: 15px;
        display: flex;
    }

    .message-wrapper.user {
        justify-content: flex-end;
    }

    .message-wrapper.admin {
        justify-content: flex-start;
    }

    .message-wrapper.system {
        justify-content: center;
    }

    .message {
        max-width: 70%;
        padding: 10px 15px;
        border-radius: 15px;
        word-wrap: break-word;
    }

    .message.user {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-bottom-right-radius: 5px;
    }

    .message.admin {
        background: white;
        color: #333;
        border: 1px solid #e0e0e0;
        border-bottom-left-radius: 5px;
    }

    .message.system {
        background: #f0f0f0;
        color: #666;
        font-size: 14px;
        padding: 8px 15px;
        border-radius: 15px;
        text-align: center;
    }

    .message-time {
        font-size: 11px;
        color: #999;
        margin-top: 5px;
    }

    .message.user .message-time {
        color: rgba(255,255,255,0.8);
    }

    .chat-input-area {
        padding: 20px;
        border-top: 1px solid #e0e0e0;
        background: white;
    }

    .input-group {
        display: flex;
        gap: 10px;
    }

    .chat-input {
        flex: 1;
        padding: 12px 15px;
        border: 2px solid #e0e0e0;
        border-radius: 25px;
        font-size: 14px;
        transition: border-color 0.3s;
    }

    .chat-input:focus {
        outline: none;
        border-color: #667eea;
    }

    .btn-send {
        padding: 12px 25px;
        border: none;
        border-radius: 25px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .btn-send:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    }

    .btn-send:disabled {
        background: #ccc;
        cursor: not-allowed;
        transform: none;
    }

    .empty-state {
        text-align: center;
        padding: 40px;
        color: #999;
    }

    .btn-back {
        margin-top: 20px;
        padding: 12px 25px;
        border: 2px solid #667eea;
        background: white;
        color: #667eea;
        border-radius: 25px;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-block;
    }

    .btn-back:hover {
        background: #667eea;
        color: white;
        text-decoration: none;
    }
</style>

<div class="chat-container">
    <div class="chat-header">
        <h2><i class="fas fa-comments"></i> 联系管理员</h2>
    </div>

    <div class="request-notice" id="requestNotice">
        <div class="icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <h3>您的联系请求已提交</h3>
        <p>@ViewBag.RequestMessage</p>
        <p>管理员会尽快与您取得联系，请耐心等待。</p>
        <a href="@Url.Action("Feedback", "Home")" class="btn-back">
            <i class="fas fa-arrow-left"></i> 返回问题反馈
        </a>
    </div>

    <div class="chat-body" id="chatBody" style="display: none;">
        <div class="chat-main">
            <div class="chat-messages" id="chatMessages">
                <div class="message-wrapper system">
                    <div class="message system">
                        <i class="fas fa-info-circle"></i> 管理在线客服
                    </div>
                </div>
            </div>

            <div class="chat-input-area">
                <div class="input-group">
                    <input type="text" id="messageInput" class="chat-input" placeholder="输入消息..." disabled>
                    <button class="btn-send" onclick="sendMessage()" disabled id="btnSend">
                        <i class="fas fa-paper-plane"></i> 发送
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        let currentUserId = null;
        let pollingInterval = null;
        let isChatActive = false;

        function escapeHtml(str) {
            if (str === null || str === undefined) return '';
            return String(str).replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;').replace(/"/g, '&quot;').replace(/'/g, '&#39;');
        }

        function formatTime(iso) {
            if (!iso) return '';
            try { return new Date(iso).toLocaleString(); } catch (e) { return iso; }
        }

        // 初始化聊天（由管理员发起）
        function initializeChat(userId) {
            currentUserId = userId;
            isChatActive = true;
            
            // 隐藏请求通知，显示聊天界面
            document.getElementById('requestNotice').style.display = 'none';
            document.getElementById('chatBody').style.display = 'flex';
            
            // 启用输入
            enableChatInput();
            
            // 加载消息
            loadMessages();
            
            // 开始轮询
            startPolling();
        }

        // 开始轮询以实现实时更新
        function startPolling() {
            if (pollingInterval) {
                clearInterval(pollingInterval);
            }
            
            // 每3秒轮询一次
            pollingInterval = setInterval(function() {
                if (isChatActive && currentUserId) {
                    loadMessages(true);
                }
            }, 3000);
        }

        function stopPolling() {
            if (pollingInterval) {
                clearInterval(pollingInterval);
                pollingInterval = null;
            }
        }

        function loadMessages(silent) {
            if (!currentUserId) return;

            fetch('@Url.Action("GetAdminContactMessages", "Home")', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ userId: currentUserId })
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    displayMessages(data.messages, silent);
                }
            })
            .catch(err => console.error('加载消息出错', err));
        }

        function displayMessages(messages, silent) {
            const container = document.getElementById('chatMessages');
            const wasAtBottom = container.scrollHeight - container.scrollTop === container.clientHeight;
            
            // 保留系统消息
            const systemMsg = container.querySelector('.message-wrapper.system');
            container.innerHTML = '';
            if (systemMsg) {
                container.appendChild(systemMsg);
            }

            if (!messages || messages.length === 0) {
                if (!silent) {
                    container.scrollTop = container.scrollHeight;
                }
                return;
            }

            messages.forEach(function(msg) {
                const senderType = (msg.senderType || msg.SenderType || '').toLowerCase();
                if (senderType === 'system') return; // 跳过系统消息（已在页面中显示）
                
                const wrapper = document.createElement('div');
                wrapper.className = 'message-wrapper ' + senderType;

                const messageDiv = document.createElement('div');
                messageDiv.className = 'message ' + senderType;

                const senderLabel = senderType === 'user' ? '我' : '管理员';
                messageDiv.innerHTML = '<div>' + escapeHtml(msg.content || msg.Content) + '</div>' +
                    '<div class="message-time">' + senderLabel + ' • ' + formatTime(msg.sentTime || msg.SentTime) + '</div>';

                wrapper.appendChild(messageDiv);
                container.appendChild(wrapper);
            });

            // 如果不是静默加载或用户在底部，自动滚动到底部
            if (!silent || wasAtBottom) {
                container.scrollTop = container.scrollHeight;
            }
        }

        function sendMessage() {
            const input = document.getElementById('messageInput');
            const content = input.value.trim();

            if (!content) {
                alert('请输入消息内容');
                return;
            }

            if (!currentUserId) {
                alert('聊天未激活');
                return;
            }

            fetch('@Url.Action("SendAdminContactMessage", "Home")', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    userId: currentUserId,
                    content: content
                })
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    input.value = '';
                    loadMessages(false);
                } else {
                    alert(data.message || '发送失败');
                }
            })
            .catch(err => {
                console.error('发送消息出错', err);
                alert('发送失败，请重试');
            });
        }

        function enableChatInput() {
            document.getElementById('messageInput').disabled = false;
            document.getElementById('btnSend').disabled = false;
        }

        function disableChatInput() {
            document.getElementById('messageInput').disabled = true;
            document.getElementById('btnSend').disabled = true;
        }

        // 页面加载后的初始化
        document.addEventListener('DOMContentLoaded', function() {
            const input = document.getElementById('messageInput');
            if (input) {
                input.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter' && !this.disabled) {
                        sendMessage();
                    }
                });
            }

            // 页面关闭时停止轮询
            window.addEventListener('beforeunload', function() {
                stopPolling();
            });
        });
    </script>
}
