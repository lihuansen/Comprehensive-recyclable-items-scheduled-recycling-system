@{
    ViewBag.Title = "联系管理员";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .chat-container {
        max-width: 1200px;
        margin: 40px auto;
        padding: 20px;
    }

    .chat-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 20px 30px;
        border-radius: 15px 15px 0 0;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .chat-header h2 {
        margin: 0;
        font-size: 24px;
        font-weight: 600;
    }

    .chat-body {
        display: flex;
        background: white;
        border-radius: 0 0 15px 15px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        height: 600px;
    }

    .conversation-list {
        width: 300px;
        border-right: 1px solid #e0e0e0;
        overflow-y: auto;
    }

    .conversation-item {
        padding: 15px;
        border-bottom: 1px solid #f0f0f0;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .conversation-item:hover {
        background-color: #f8f9fa;
    }

    .conversation-item.active {
        background-color: #e3f2fd;
        border-left: 4px solid #667eea;
    }

    .conversation-status {
        font-size: 12px;
        color: #666;
        margin-top: 5px;
    }

    .conversation-time {
        font-size: 11px;
        color: #999;
    }

    .chat-main {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .chat-messages {
        flex: 1;
        padding: 20px;
        overflow-y: auto;
        background-color: #f8f9fa;
    }

    .message-wrapper {
        margin-bottom: 15px;
        display: flex;
    }

    .message-wrapper.user {
        justify-content: flex-end;
    }

    .message-wrapper.admin {
        justify-content: flex-start;
    }

    .message-wrapper.system {
        justify-content: center;
    }

    .message {
        max-width: 60%;
        padding: 10px 15px;
        border-radius: 15px;
        word-wrap: break-word;
    }

    .message.user {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-bottom-right-radius: 5px;
    }

    .message.admin {
        background: white;
        color: #333;
        border: 1px solid #e0e0e0;
        border-bottom-left-radius: 5px;
    }

    .message.system {
        background: #f0f0f0;
        color: #666;
        font-size: 13px;
        padding: 6px 12px;
        border-radius: 15px;
        text-align: center;
    }

    .message-time {
        font-size: 11px;
        color: #999;
        margin-top: 5px;
    }

    .message.user .message-time {
        color: rgba(255,255,255,0.8);
    }

    .chat-input-area {
        padding: 20px;
        border-top: 1px solid #e0e0e0;
        background: white;
    }

    .input-group {
        display: flex;
        gap: 10px;
    }

    .chat-input {
        flex: 1;
        padding: 12px 15px;
        border: 2px solid #e0e0e0;
        border-radius: 25px;
        font-size: 14px;
        transition: border-color 0.3s;
    }

    .chat-input:focus {
        outline: none;
        border-color: #667eea;
    }

    .btn-send, .btn-end {
        padding: 12px 25px;
        border: none;
        border-radius: 25px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
    }

    .btn-send {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .btn-send:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    }

    .btn-end {
        background: #dc3545;
        color: white;
    }

    .btn-end:hover {
        background: #c82333;
    }

    .btn-history {
        margin-bottom: 15px;
        padding: 10px 20px;
        border: 2px solid #667eea;
        background: white;
        color: #667eea;
        border-radius: 25px;
        cursor: pointer;
        width: 100%;
        font-weight: 600;
        transition: all 0.3s;
    }

    .btn-history:hover {
        background: #667eea;
        color: white;
    }

    .empty-state {
        text-align: center;
        padding: 40px;
        color: #999;
    }

    .new-conversation {
        padding: 20px;
        text-align: center;
        background: #f8f9fa;
    }

    .btn-new-chat {
        padding: 12px 30px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 25px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
    }

    .btn-new-chat:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    }
</style>

<div class="chat-container">
    <div class="chat-header">
        <h2><i class="fas fa-comments"></i> 联系管理员</h2>
    </div>

    <div class="chat-body">
        <div class="conversation-list">
            <button class="btn-history" onclick="showHistoryConversations()">
                <i class="fas fa-history"></i> 查看历史对话
            </button>
            <button class="btn-history" onclick="returnToFeedback()" style="margin-top: 10px;">
                <i class="fas fa-arrow-left"></i> 返回问题反馈
            </button>
            <div id="conversationList">
                <div class="new-conversation">
                    <p style="padding: 15px; color: #666; text-align: center;">正在连接管理员...</p>
                </div>
            </div>
        </div>

        <div class="chat-main">
            <div class="chat-messages" id="chatMessages">
                <div class="empty-state">
                    <i class="fas fa-comments" style="font-size: 48px; color: #ddd; margin-bottom: 15px;"></i>
                    <p>选择或开始一个对话</p>
                </div>
            </div>

            <div class="chat-input-area">
                <div class="input-group">
                    <input type="text" id="messageInput" class="chat-input" placeholder="输入消息..." disabled>
                    <button class="btn-send" onclick="sendMessage()" disabled id="btnSend">
                        <i class="fas fa-paper-plane"></i> 发送
                    </button>
                </div>
                <div id="conversationStatus" style="margin-top: 10px; text-align: center; color: #666; font-size: 13px;">
                    <!-- 会话状态将显示在这里 -->
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        let currentConversationId = null;
        let currentUserId = null;
        let isHistoryMode = false;
        let pollingInterval = null;
        let isConversationEnded = false;
        let lastMessageCount = 0;

        function escapeHtml(str) {
            if (str === null || str === undefined) return '';
            return String(str).replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;').replace(/"/g, '&quot;').replace(/'/g, '&#39;');
        }

        function formatTime(iso) {
            if (!iso) return '';
            try { return new Date(iso).toLocaleString(); } catch (e) { return iso; }
        }

        function startNewConversation() {
            isHistoryMode = false;
            fetch('@Url.Action("StartAdminContact", "Home")', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    currentConversationId = data.conversationId;
                    currentUserId = data.userId;
                    isConversationEnded = false;
                    loadMessages();
                    checkConversationStatus();
                    startPolling();
                } else {
                    alert(data.message || '创建会话失败');
                }
            })
            .catch(err => {
                console.error('创建会话出错', err);
                alert('创建会话失败，请重试');
            });
        }

        // 开始轮询以实现实时更新
        function startPolling() {
            // 清除之前的轮询
            if (pollingInterval) {
                clearInterval(pollingInterval);
            }
            
            // 每3秒轮询一次
            pollingInterval = setInterval(function() {
                if (!isHistoryMode && currentUserId && !isConversationEnded) {
                    loadMessages(true); // 静默加载，不滚动
                    checkConversationStatus();
                }
            }, 3000);
        }

        // 停止轮询
        function stopPolling() {
            if (pollingInterval) {
                clearInterval(pollingInterval);
                pollingInterval = null;
            }
        }

        // 检查会话状态
        function checkConversationStatus() {
            if (!currentUserId) return;

            fetch('@Url.Action("GetUserAdminConversations", "Home")', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            })
            .then(r => r.json())
            .then(data => {
                if (data.success && data.conversations && data.conversations.length > 0) {
                    // 获取最新的会话状态
                    const latestConv = data.conversations[0];
                    if (latestConv.adminEnded) {
                        isConversationEnded = true;
                        disableChatInput();
                        updateStatusDisplay('已结束', '#dc3545');
                        stopPolling();
                    } else {
                        isConversationEnded = false;
                        enableChatInput();
                        updateStatusDisplay('进行中', '#28a745');
                    }
                }
            })
            .catch(err => console.error('检查会话状态出错', err));
        }

        // 更新状态显示
        function updateStatusDisplay(status, color) {
            const statusDiv = document.getElementById('conversationStatus');
            if (statusDiv) {
                statusDiv.innerHTML = '<i class="fas fa-circle" style="font-size: 8px; color: ' + color + ';"></i> 会话状态: <strong style="color: ' + color + ';">' + status + '</strong>';
            }
        }

        function loadMessages(silent) {
            if (!currentUserId) return;

            fetch('@Url.Action("GetAdminContactMessages", "Home")', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ userId: currentUserId })
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    // 只有消息数量变化时才更新显示
                    if (!silent || data.messages.length !== lastMessageCount) {
                        lastMessageCount = data.messages.length;
                        displayMessages(data.messages, silent);
                    }
                }
            })
            .catch(err => console.error('加载消息出错', err));
        }

        function displayMessages(messages, silent) {
            const container = document.getElementById('chatMessages');
            const wasAtBottom = container.scrollHeight - container.scrollTop === container.clientHeight;
            
            container.innerHTML = '';

            if (!messages || messages.length === 0) {
                container.innerHTML = '<div class="empty-state"><p>暂无消息</p></div>';
                return;
            }

            messages.forEach(function(msg) {
                const senderType = (msg.senderType || msg.SenderType || '').toLowerCase();
                const wrapper = document.createElement('div');
                wrapper.className = 'message-wrapper ' + senderType;

                const messageDiv = document.createElement('div');
                messageDiv.className = 'message ' + senderType;

                if (senderType === 'system') {
                    messageDiv.innerHTML = '<i class="fas fa-info-circle"></i> ' + escapeHtml(msg.content || msg.Content);
                } else {
                    const senderLabel = senderType === 'user' ? '我' : '管理员';
                    messageDiv.innerHTML = '<div>' + escapeHtml(msg.content || msg.Content) + '</div>' +
                        '<div class="message-time">' + senderLabel + ' • ' + formatTime(msg.sentTime || msg.SentTime) + '</div>';
                }

                wrapper.appendChild(messageDiv);
                container.appendChild(wrapper);
            });

            // 如果不是静默加载或用户在底部，自动滚动到底部
            if (!silent || wasAtBottom) {
                container.scrollTop = container.scrollHeight;
            }
        }

        function sendMessage() {
            const input = document.getElementById('messageInput');
            const content = input.value.trim();

            if (!content) {
                alert('请输入消息内容');
                return;
            }

            if (!currentUserId) {
                alert('请先开始对话');
                return;
            }

            if (isConversationEnded) {
                alert('对话已结束，无法发送消息');
                return;
            }

            fetch('@Url.Action("SendAdminContactMessage", "Home")', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    userId: currentUserId,
                    content: content
                })
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    input.value = '';
                    loadMessages(false);
                } else {
                    alert(data.message || '发送失败');
                }
            })
            .catch(err => {
                console.error('发送消息出错', err);
                alert('发送失败，请重试');
            });
        }

        function enableChatInput() {
            document.getElementById('messageInput').disabled = false;
            document.getElementById('btnSend').disabled = false;
            document.getElementById('btnEnd').disabled = false;
        }

        function disableChatInput() {
            document.getElementById('messageInput').disabled = true;
            document.getElementById('btnSend').disabled = true;
            document.getElementById('btnEnd').disabled = true;
        }

        function showHistoryConversations() {
            isHistoryMode = true;
            stopPolling(); // 停止实时更新
            
            fetch('@Url.Action("GetUserAdminConversations", "Home")', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            })
            .then(r => r.json())
            .then(data => {
                if (data.success && data.conversations) {
                    displayConversationList(data.conversations);
                }
            })
            .catch(err => console.error('加载会话列表出错', err));
        }

        function displayConversationList(conversations) {
            const container = document.getElementById('conversationList');
            container.innerHTML = '';

            if (conversations.length === 0) {
                container.innerHTML = '<div class="empty-state">暂无历史对话</div>';
                return;
            }

            conversations.forEach(function(conv) {
                const item = document.createElement('div');
                item.className = 'conversation-item';
                item.onclick = function() {
                    currentUserId = conv.userID || conv.UserID;
                    loadHistoryMessages(conv);
                    document.querySelectorAll('.conversation-item').forEach(el => el.classList.remove('active'));
                    item.classList.add('active');
                };

                const adminEnded = conv.adminEnded || conv.AdminEnded;
                const status = adminEnded ? '已结束' : '进行中';
                const statusColor = adminEnded ? '#999' : '#28a745';

                item.innerHTML = '<div><strong>对话 #' + (conv.conversationID || conv.ConversationID) + '</strong></div>' +
                    '<div class="conversation-time">' + formatTime(conv.startTime || conv.StartTime) + '</div>' +
                    '<div class="conversation-status" style="color:' + statusColor + '">' + status + '</div>';

                container.appendChild(item);
            });
        }

        function loadHistoryMessages(conversation) {
            currentUserId = conversation.userID || conversation.UserID;
            const endTime = conversation.adminEndedTime || conversation.AdminEndedTime;
            
            fetch('@Url.Action("GetAdminContactMessages", "Home")', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ 
                    userId: currentUserId,
                    beforeTime: endTime
                })
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    displayMessages(data.messages, false);
                    const adminEnded = conversation.adminEnded || conversation.AdminEnded;
                    if (adminEnded) {
                        isConversationEnded = true;
                        disableChatInput();
                        updateStatusDisplay('已结束', '#dc3545');
                    } else {
                        isConversationEnded = false;
                        enableChatInput();
                        updateStatusDisplay('进行中', '#28a745');
                        // 如果是进行中的对话，切换回实时模式
                        isHistoryMode = false;
                        startPolling();
                    }
                }
            })
            .catch(err => console.error('加载历史消息出错', err));
        }

        // 返回到问题反馈页面
        function returnToFeedback() {
            window.location.href = '@Url.Action("Feedback", "Home")';
        }

        // 回车发送
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('messageInput').addEventListener('keypress', function(e) {
                if (e.key === 'Enter' && !this.disabled) {
                    sendMessage();
                }
            });

            // 自动开始新对话
            startNewConversation();

            // 页面关闭时停止轮询
            window.addEventListener('beforeunload', function() {
                stopPolling();
            });
        });
    </script>
}
