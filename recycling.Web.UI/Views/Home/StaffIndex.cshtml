@{
    ViewBag.Title = "工作人员首页";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<style>
    .staff-dashboard {
        max-width: 1200px;
        margin: 0 auto;
    }

    .welcome-section {
        text-align: center;
        margin-bottom: 40px;
        padding: 30px;
        background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
        color: white;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

        .welcome-section h1 {
            font-size: 2.2em;
            margin-bottom: 10px;
        }

    .role-badge {
        display: inline-block;
        background: #1abc9c;
        color: white;
        padding: 8px 20px;
        border-radius: 25px;
        font-size: 0.9em;
        margin-top: 10px;
        font-weight: bold;
    }

    .quick-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }

    .stat-card {
        background: white;
        padding: 25px;
        border-radius: 8px;
        text-align: center;
        box-shadow: 0 3px 10px rgba(0,0,0,0.08);
        border-left: 4px solid #3498db;
    }

    .stat-number {
        font-size: 2em;
        font-weight: bold;
        color: #2c3e50;
        margin-bottom: 5px;
    }

    .stat-label {
        color: #7f8c8d;
        font-size: 0.9em;
    }

    .dashboard-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 25px;
    }

    .dashboard-card {
        background: white;
        border-radius: 10px;
        padding: 30px;
        text-align: center;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        text-decoration: none;
        color: #2c3e50;
        border: 2px solid transparent;
    }

        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
            border-color: #3498db;
            text-decoration: none;
            color: #2c3e50;
        }

    .card-icon {
        font-size: 42px;
        margin-bottom: 20px;
        color: #3498db;
    }

    .card-title {
        font-size: 1.3em;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .card-desc {
        color: #7f8c8d;
        font-size: 0.9em;
        line-height: 1.5;
    }

    @@media (max-width: 768px) {
        .welcome-section h1 {
            font-size: 1.8em;
        }

        .dashboard-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="staff-dashboard">
    <div class="welcome-section">
        <h1>欢迎使用工作平台</h1>
        <p>@ViewBag.DisplayName：@ViewBag.StaffName，祝您工作愉快！</p>
        <div class="role-badge">@ViewBag.StaffRole.ToUpper() 权限</div>
    </div>

    <!-- 快速统计 -->
    <div class="quick-stats">
        <div class="stat-card">
            <div class="stat-number">1,234</div>
            <div class="stat-label">今日访问量</div>
        </div>
        <div class="stat-card">
            <div class="stat-number">56</div>
            <div class="stat-label">待处理订单</div>
        </div>
        <div class="stat-card">
            <div class="stat-number">23</div>
            <div class="stat-label">新注册用户</div>
        </div>
        <div class="stat-card">
            <div class="stat-number">12</div>
            <div class="stat-label">未读消息</div>
        </div>
    </div>

    <!-- 功能导航 -->
    <div class="dashboard-grid">
        <a href="@Url.Action("UserManagement", "Staff")" class="dashboard-card">
            <div class="card-icon">
                <i class="fas fa-users-cog"></i>
            </div>
            <div class="card-title">用户管理</div>
            <div class="card-desc">管理用户账户，查看用户信息，处理用户请求</div>
        </a>

        <a href="@Url.Action("OrderManagement", "Staff")" class="dashboard-card">
            <div class="card-icon">
                <i class="fas fa-tasks"></i>
            </div>
            <div class="card-title">订单管理</div>
            <div class="card-desc">处理回收订单，分配任务，跟踪订单状态</div>
        </a>

        <a href="@Url.Action("Statistics", "Staff")" class="dashboard-card">
            <div class="card-icon">
                <i class="fas fa-chart-bar"></i>
            </div>
            <div class="card-title">数据统计</div>
            <div class="card-desc">查看业务数据，生成报表，分析趋势</div>
        </a>

        <a href="@Url.Action("PageManagement", "Staff")" class="dashboard-card">
            <div class="card-icon">
                <i class="fas fa-file-alt"></i>
            </div>
            <div class="card-title">页面管理</div>
            <div class="card-desc">管理网站内容，更新页面信息，维护公告</div>
        </a>

        <a href="@Url.Action("MessageCenter", "Staff")" class="dashboard-card">
            <div class="card-icon">
                <i class="fas fa-comment-dots"></i>
            </div>
            <div class="card-title">消息中心</div>
            <div class="card-desc">处理用户反馈，发送通知，管理消息</div>
        </a>

        <a href="@Url.Action("SystemSettings", "Staff")" class="dashboard-card">
            <div class="card-icon">
                <i class="fas fa-cogs"></i>
            </div>
            <div class="card-title">系统设置</div>
            <div class="card-desc">配置系统参数，管理权限，维护系统</div>
        </a>
    </div>
</div>