@{
    ViewBag.Title = "工作人员首页";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<style>
    .staff-dashboard {
        max-width: 1200px;
        margin: 0 auto;
    }

    .welcome-section {
        text-align: center;
        margin-bottom: 40px;
        padding: 30px;
        background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
        color: white;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

        .welcome-section h1 {
            font-size: 2.2em;
            margin-bottom: 10px;
        }

    .role-badge {
        display: inline-block;
        background: #1abc9c;
        color: white;
        padding: 8px 20px;
        border-radius: 25px;
        font-size: 0.9em;
        margin-top: 10px;
        font-weight: bold;
    }

    .quick-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }

    .stat-card {
        background: white;
        padding: 25px;
        border-radius: 8px;
        text-align: center;
        box-shadow: 0 3px 10px rgba(0,0,0,0.08);
        border-left: 4px solid #3498db;
    }

    .stat-number {
        font-size: 2em;
        font-weight: bold;
        color: #2c3e50;
        margin-bottom: 5px;
    }

    .stat-label {
        color: #7f8c8d;
        font-size: 0.9em;
    }

    .dashboard-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 25px;
    }

    .dashboard-card {
        background: white;
        border-radius: 10px;
        padding: 30px;
        text-align: center;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        text-decoration: none;
        color: #2c3e50;
        border: 2px solid transparent;
    }

        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
            border-color: #3498db;
            text-decoration: none;
            color: #2c3e50;
        }

    .card-icon {
        font-size: 42px;
        margin-bottom: 20px;
        color: #3498db;
    }

    .card-title {
        font-size: 1.3em;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .card-desc {
        color: #7f8c8d;
        font-size: 0.9em;
        line-height: 1.5;
    }

    @@media (max-width: 768px) {
        .welcome-section h1 {
            font-size: 1.8em;
        }

        .dashboard-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="staff-dashboard">
    <div class="welcome-section">
        <h1>欢迎使用工作平台</h1>
        <p>@ViewBag.DisplayName：@ViewBag.StaffName，祝您工作愉快！</p>
        <div class="role-badge">@ViewBag.StaffRole.ToUpper() 权限</div>
    </div>
</div>