@{
    ViewBag.Title = "工作人员首页";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<style>
    .home-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .carousel-section {
        height: 300px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 15px;
        margin-bottom: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 24px;
        font-weight: bold;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        position: relative;
        overflow: hidden;
    }

    .carousel-placeholder {
        text-align: center;
        z-index: 2;
    }

        .carousel-placeholder i {
            font-size: 48px;
            margin-bottom: 15px;
            display: block;
        }

    .content-section {
        min-height: 400px;
        background: #f8f9fa;
        border-radius: 15px;
        padding: 40px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        position: relative;
        text-align: center;
    }

    .welcome-card {
        background: white;
        border-radius: 10px;
        padding: 40px;
        box-shadow: 0 3px 10px rgba(0,0,0,0.05);
        margin-bottom: 30px;
    }

    .welcome-title {
        font-size: 28px;
        font-weight: bold;
        color: #333;
        margin-bottom: 15px;
    }

    .welcome-subtitle {
        font-size: 18px;
        color: #666;
        margin-bottom: 20px;
    }

    .role-badge {
        display: inline-block;
        background: linear-gradient(45deg, #28a745, #20c997);
        color: white;
        padding: 8px 25px;
        border-radius: 25px;
        font-size: 16px;
        font-weight: bold;
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    }

    .system-info {
        margin-top: 30px;
        padding: 20px;
        background: rgba(255, 255, 255, 0.8);
        border-radius: 10px;
        border-left: 4px solid #3498db;
    }

        .system-info i {
            color: #3498db;
            margin-right: 10px;
        }

    .empty-message {
        text-align: center;
        padding: 60px 0;
        color: #6c757d;
    }

        .empty-message i {
            font-size: 64px;
            margin-bottom: 20px;
            opacity: 0.5;
        }

    .carousel-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        animation: shimmer 3s infinite;
    }

    @@keyframes shimmer {
        0% {
            left: -100%;
        }

        100% {
            left: 100%;
        }
    }

    @@media (max-width: 768px) {
        .carousel-section {
            height: 200px;
            font-size: 18px;
        }

        .content-section {
            padding: 20px;
            min-height: 300px;
        }

        .welcome-card {
            padding: 25px;
        }

        .welcome-title {
            font-size: 22px;
        }

        .welcome-subtitle {
            font-size: 16px;
        }
    }
</style>

<div class="home-container">
    <!-- 轮播图区域 - 与用户首页保持一致 -->
    <div class="carousel-section">
        <div class="carousel-placeholder">
            <i class="fas fa-user-shield"></i>
            <div>工作人员工作平台</div>
            <small style="font-size: 14px; font-weight: normal; margin-top: 10px; display: block;">
                专业、高效的管理系统
            </small>
        </div>
    </div>

    <!-- 内容区域 -->
    <div class="content-section">
        <!-- 欢迎卡片 -->
        <div class="welcome-card">
            <div class="welcome-title">欢迎回来，@ViewBag.DisplayName</div>
            <div class="welcome-subtitle">@ViewBag.StaffName，祝您工作愉快！</div>
            <div class="role-badge">@ViewBag.StaffRole.ToUpper() 权限</div>
        </div>

        <!-- 系统提示信息 -->
        <div class="system-info">
            <i class="fas fa-info-circle"></i>
            <span>请使用上方导航菜单管理各项业务功能</span>
        </div>

        <!-- 可选：占位区域，为后续功能扩展预留 -->
        <div class="empty-message">
            <i class="fas fa-cogs"></i>
            <h4>功能管理区域</h4>
            <p>后续可根据业务需求在此添加数据统计、快捷操作等功能</p>
        </div>
    </div>
</div>