@section Scripts {
    <script>
        // 滚动到指定区域
        function scrollToSection(sectionId) {
            var element = document.getElementById(sectionId);
            if (element) {
                element.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }
        }

        // 切换FAQ展开/收起
        function toggleFAQ(element) {
            var faqItem = element.parentElement;
            var isOpen = faqItem.classList.contains('open');
            
            // 关闭所有已打开的FAQ
            document.querySelectorAll('.faq-item.open').forEach(function(item) {
                item.classList.remove('open');
            });
            
            // 如果当前不是打开状态，则打开它
            if (!isOpen) {
                faqItem.classList.add('open');
            }
        }

        // 筛选FAQ分类
        function filterFAQ(category) {
            // 更新按钮状态
            document.querySelectorAll('.faq-category-btn').forEach(function(btn) {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');

            // 筛选FAQ项
            document.querySelectorAll('.faq-item').forEach(function(item) {
                if (category === 'all' || item.dataset.category === category) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
                // 关闭所有展开的FAQ
                item.classList.remove('open');
            });
        }

        // 搜索FAQ
        function searchFAQ(event) {
            if (event.key === 'Enter') {
                performSearch();
            }
        }

        function performSearch() {
            var searchTerm = document.getElementById('helpSearchInput').value.toLowerCase().trim();
            
            if (!searchTerm) {
                // 如果搜索词为空，显示所有FAQ
                document.querySelectorAll('.faq-item').forEach(function(item) {
                    item.style.display = 'block';
                });
                return;
            }

            // 重置分类按钮
            document.querySelectorAll('.faq-category-btn').forEach(function(btn) {
                btn.classList.remove('active');
            });
            document.querySelector('.faq-category-btn').classList.add('active');

            var found = false;
            document.querySelectorAll('.faq-item').forEach(function(item) {
                var question = item.querySelector('.faq-question span').textContent.toLowerCase();
                var answer = item.querySelector('.faq-answer').textContent.toLowerCase();
                
                if (question.includes(searchTerm) || answer.includes(searchTerm)) {
                    item.style.display = 'block';
                    found = true;
                } else {
                    item.style.display = 'none';
                }
            });

            // 滚动到FAQ区域
            if (found) {
                scrollToSection('faq-section');
            } else {
                alert('未找到相关问题，请尝试其他关键词或联系客服');
            }
        }

        // 页面加载时的动画效果
        document.addEventListener('DOMContentLoaded', function() {
            // 为快速入口卡片添加动画
            var cards = document.querySelectorAll('.quick-card');
            cards.forEach(function(card, index) {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                setTimeout(function() {
                    card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });
    </script>
}
