@{
    ViewBag.Title = "首页";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- 引入Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    /* 首页专用样式 */
    .home-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    /* 轮播图区域 */
    .carousel-section {
        height: 300px; /* 占3份 */
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 15px;
        margin-bottom: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 24px;
        font-weight: bold;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        position: relative;
        overflow: hidden;
    }

    .carousel-placeholder {
        text-align: center;
        z-index: 2;
    }

        .carousel-placeholder i {
            font-size: 48px;
            margin-bottom: 15px;
            display: block;
        }

    /* 内容区域 */
    .content-section {
        height: 700px; /* 占7份，保持3:7比例 */
        background: #f8f9fa;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        position: relative;
    }

    /* 搜索筛选区域 */
    .search-filter-row {
        display: flex;
        gap: 20px;
        margin-bottom: 30px;
        flex-wrap: wrap;
    }

    .search-column {
        flex: 1;
        min-width: 250px;
    }

    .filter-column {
        flex: 1;
        min-width: 200px;
    }

    .price-column {
        flex: 1;
        min-width: 300px;
    }

    .form-group {
        margin-bottom: 0;
    }

    .form-control {
        height: 50px;
        border-radius: 10px;
        border: 2px solid #e9ecef;
        font-size: 16px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }

    .price-range-group {
        display: flex;
        gap: 10px;
        align-items: center;
    }

    .price-input {
        flex: 1;
    }

    .price-separator {
        color: #6c757d;
        font-weight: bold;
    }

    /* 预约按钮 */
    .appointment-section {
        position: absolute;
        bottom: 40px;
        left: 0;
        right: 0;
        display: flex;
        justify-content: center;
    }

    .appointment-btn {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background: linear-gradient(45deg, #28a745, #20c997);
        border: none;
        color: white;
        font-size: 16px;
        font-weight: bold;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        box-shadow: 0 10px 30px rgba(40, 167, 69, 0.3);
        transition: all 0.3s ease;
        text-decoration: none;
    }

        .appointment-btn:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(40, 167, 69, 0.4);
            color: white;
            text-decoration: none;
        }

        .appointment-btn i {
            font-size: 32px;
            margin-bottom: 8px;
        }

    /* 响应式设计 */
    @@media (max-width: 768px) {
        .search-filter-row {
            flex-direction: column;
        }

        .search-column,
        .filter-column,
        .price-column {
            min-width: 100%;
        }

        .carousel-section {
            height: 200px;
            font-size: 18px;
        }

        .content-section {
            height: auto;
            min-height: 500px;
        }

        .appointment-btn {
            width: 100px;
            height: 100px;
            font-size: 14px;
        }
    }

    /* 加载动画 */
    .carousel-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        animation: shimmer 3s infinite;
    }

    @@keyframes shimmer {
        0% {
            left: -100%;
        }

        100% {
            left: 100%;
        }
    }
</style>

<div class="home-container">
    <!-- 轮播图区域 -->
    <div class="carousel-section">
        <div class="carousel-placeholder">
            <i class="fas fa-images"></i>
            <div>轮播图片展示区域</div>
            <small style="font-size: 14px; font-weight: normal; margin-top: 10px; display: block;">
                管理员可在此处配置轮播图片
            </small>
        </div>
    </div>

    <!-- 内容区域 -->
    <div class="content-section">
        <!-- 搜索筛选行 -->
        <div class="search-filter-row">
            <!-- 第一列：模糊搜索 -->
            <div class="search-column">
                <div class="form-group">
                    <label for="searchInput" class="form-label">
                        <i class="fas fa-search"></i> 关键词搜索
                    </label>
                    <input type="text" class="form-control" id="searchInput" placeholder="输入物品名称、描述等信息...">
                </div>
            </div>

            <!-- 第二列：品类筛选 -->
            <div class="filter-column">
                <div class="form-group">
                    <label for="categorySelect" class="form-label">
                        <i class="fas fa-list"></i> 回收品类
                    </label>
                    <select class="form-control" id="categorySelect">
                        <option value="">全部品类</option>
                        <option value="paper">纸张</option>
                        <option value="plastic">塑料</option>
                        <option value="metal">金属</option>
                        <option value="glass">玻璃</option>
                        <option value="fabric">纺织品</option>
                    </select>
                </div>
            </div>

            <!-- 第三列：价格区间 -->
            <div class="price-column">
                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-tags"></i> 价格区间（元）
                    </label>
                    <div class="price-range-group">
                        <input type="number" class="form-control price-input" id="minPrice" placeholder="最小值" min="0">
                        <span class="price-separator">-</span>
                        <input type="number" class="form-control price-input" id="maxPrice" placeholder="最大值" min="0">
                    </div>
                </div>
            </div>
        </div>

        <!-- 内容展示区域（预留） -->
        <div style="text-align: center; margin-top: 50px; color: #6c757d;">
            <i class="fas fa-box-open" style="font-size: 48px; margin-bottom: 15px;"></i>
            <h4>回收物品展示区域</h4>
            <p>筛选后的回收物品将在此处展示</p>
        </div>

        <!-- 预约按钮 -->
        <div class="appointment-section">
            <a href="@Url.Action("Order", "Home")" class="appointment-btn">
                <i class="fas fa-calendar-check"></i>
                <span>预约上门</span>
            </a>
        </div>
    </div>
</div>

