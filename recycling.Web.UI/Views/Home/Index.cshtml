const appointmentBtn = document.querySelector('.appointment-btn');
if (appointmentBtn) {
    appointmentBtn.addEventListener('click', function (e) {
        e.preventDefault(); // 阻止默认跳转

        // 检查登录状态
        checkLoginStatus().then(isLoggedIn => {
            if (isLoggedIn) {
                // 已登录，跳转到预约页面
                window.location.href = '@Url.Action("Order", "Home")';
            } else {
                // 未登录，显示提示并跳转到登录页
                showLoginPrompt();
            }
        }).catch(error => {
            console.error('检查登录状态时出错:', error);
            // 出错时也要求登录
            showLoginPrompt();
        });
    });
}

// 检查登录状态的函数
function checkLoginStatus() {
    return new Promise((resolve, reject) => {
        try {
            // 方法1：通过Session状态判断（服务器端）
            // 这里我们使用一个简单的AJAX请求来检查登录状态
            fetch('@Url.Action("CheckLoginStatus", "Home")', {
                method: 'GET',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('网络请求失败');
                }
                return response.json();
            })
            .then(data => {
                resolve(data.isLoggedIn);
            })
            .catch(error => {
                // 如果AJAX请求失败，使用客户端方法判断
                console.warn('AJAX检查失败，使用客户端判断:', error);
                // 方法2：通过页面元素判断（客户端）
                const userInfo = document.querySelector('.navbar-user-info');
                if (userInfo) {
                    const hasLoginText = userInfo.textContent.includes('您好');
                    resolve(hasLoginText);
                } else {
                    resolve(false);
                }
            });
        } catch (error) {
            reject(error);
        }
    });
}

// 显示登录提示的函数
function showLoginPrompt() {
    // 创建自定义弹窗
    const modal = document.createElement('div');
    modal.style.cssText = `
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
    `;

    const modalContent = document.createElement('div');
    modalContent.style.cssText = `
        background: white;
        padding: 30px;
        border-radius: 15px;
        text-align: center;
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        max-width: 300px;
        width: 90%;
    `;

    modalContent.innerHTML = `
        <div style="font-size: 48px; color: #ff6b6b; margin-bottom: 15px;">
            <i class="fas fa-exclamation-circle"></i>
        </div>
        <h4 style="margin-bottom: 15px; color: #333;">请先登录！</h4>
        <p style="color: #666; margin-bottom: 20px;">您需要登录后才能预约上门服务</p>
        <div style="display: flex; gap: 10px; justify-content: center;">
            <button id="confirmLogin" style="
                background: #28a745;
                color: white;
                border: none;
                padding: 10px 20px;
                border-radius: 8px;
                cursor: pointer;
                font-size: 14px;
            ">立即登录</button>
            <button id="cancelPrompt" style="
                background: #6c757d;
                color: white;
                border: none;
                padding: 10px 20px;
                border-radius: 8px;
                cursor: pointer;
                font-size: 14px;
            ">稍后再说</button>
        </div>
    `;

    modal.appendChild(modalContent);
    document.body.appendChild(modal);

    // 立即登录按钮事件
    document.getElementById('confirmLogin').addEventListener('click', function() {
        document.body.removeChild(modal);
        window.location.href = '@Url.Action("LoginSelect", "Home")';
    });

    // 取消按钮事件
    document.getElementById('cancelPrompt').addEventListener('click', function() {
        document.body.removeChild(modal);
    });

    // 点击背景关闭
    modal.addEventListener('click', function(e) {
        if (e.target === modal) {
            document.body.removeChild(modal);
        }
    });
}


