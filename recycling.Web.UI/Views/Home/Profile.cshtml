@model recycling.Model.Users
@{
    ViewBag.Title = "个人中心";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .profile-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 30px;
    }

    .profile-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 30px;
        border-radius: 15px;
        margin-bottom: 30px;
        text-align: center;
    }

    .profile-avatar {
        width: 80px;
        height: 80px;
        background: rgba(255,255,255,0.2);
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 32px;
        margin-bottom: 15px;
        cursor: pointer;
    }

    .welcome-text {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .member-info {
        opacity: 0.9;
        font-size: 14px;
    }

    .action-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .action-card {
        background: white;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        text-align: center;
        transition: transform 0.3s;
        border: 2px solid transparent;
    }

        .action-card:hover {
            transform: translateY(-5px);
            border-color: #667eea;
        }

    .card-icon {
        font-size: 48px;
        color: #667eea;
        margin-bottom: 15px;
    }

    .card-title {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 10px;
        color: #333;
    }

    .card-description {
        color: #666;
        font-size: 14px;
        margin-bottom: 20px;
    }

    .btn-action {
        background: #667eea;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: background 0.3s;
        display: inline-block;
    }

        .btn-action:hover {
            background: #5a6fd8;
            color: white;
            text-decoration: none;
        }

    .user-info-section {
        background: white;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        margin-bottom: 20px;
    }

    .info-title {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 20px;
        color: #333;
        border-bottom: 2px solid #f0f0f0;
        padding-bottom: 10px;
    }

    .info-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 0;
        border-bottom: 1px solid #f8f9fa;
    }

    .info-label {
        font-weight: bold;
        color: #333;
    }

    .info-value {
        color: #666;
    }

    .info-item:last-child {
        border-bottom: none;
    }

    .success-alert {
        background: #d4edda;
        border: 1px solid #c3e6cb;
        color: #155724;
        padding: 15px;
        border-radius: 5px;
        margin-bottom: 20px;
    }
</style>

<div class="profile-container">
    <!-- 成功消息提示 -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="success-alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        </div>
    }

    <!-- 个人资料头部 -->
    <div class="profile-header">
        <div class="profile-avatar" id="profileAvatar" onclick="showAvatarModal()">
            @if (!string.IsNullOrEmpty(Model.URL))
            {
                <img src="@Model.URL" alt="用户头像" style="width: 100%; height: 100%; border-radius: 50%; object-fit: cover;" />
            }
            else
            {
                <i class="fas fa-user"></i>
            }
        </div>
        <div class="unified-mt-2">
            <button onclick="showAvatarModal()" class="btn btn-sm" style="background: rgba(255,255,255,0.3); color: white; border: none; padding: 5px 15px; border-radius: 5px; cursor: pointer;">
                <i class="fas fa-camera"></i> 修改头像
            </button>
        </div>
        <div class="welcome-text">欢迎回来，@Model.Username！</div>
        <div class="member-info">
            <i class="fas fa-calendar-alt"></i> 注册时间：@Model.RegistrationDate.Value.ToString("yyyy-MM-dd")
            @if (Model.LastLoginDate.HasValue)
            {
                <span class="unified-ml-4">
                    <i class="fas fa-sign-in-alt"></i> 最后登录：@Model.LastLoginDate.Value.ToString("yyyy-MM-dd HH:mm")
                </span>
            }
        </div>
    </div>

    <!-- 功能卡片 -->
    <div class="action-cards">
        <div class="action-card">
            <div class="card-icon">
                <i class="fas fa-user-edit"></i>
            </div>
            <div class="card-title">编辑个人信息</div>
            <div class="card-description">
                修改您的用户名、手机号码和电子邮箱等信息
            </div>
            <a href="@Url.Action("EditProfile", "Home")" class="btn-action">
                <i class="fas fa-edit"></i> 编辑信息
            </a>
        </div>

        <div class="action-card">
            <div class="card-icon">
                <i class="fas fa-lock"></i>
            </div>
            <div class="card-title">修改密码</div>
            <div class="card-description">
                定期修改密码，保护您的账户安全
            </div>
            <a href="@Url.Action("ChangePassword", "Home")" class="btn-action">
                <i class="fas fa-key"></i> 修改密码
            </a>
        </div>

        <div class="action-card">
            <div class="card-icon">
                <i class="fas fa-map-marker-alt"></i>
            </div>
            <div class="card-title">地址管理</div>
            <div class="card-description">
                管理您的收货地址，添加、修改或删除地址
            </div>
            <a href="@Url.Action("AddressManagement", "Home")" class="btn-action">
                <i class="fas fa-address-book"></i> 管理地址
            </a>
        </div>

        <div class="action-card">
            <div class="card-icon">
                <i class="fas fa-comments"></i>
            </div>
            <div class="card-title">我的反馈</div>
            <div class="card-description">
                查看您提交的反馈以及管理员的回复
            </div>
            <a href="@Url.Action("MyFeedback", "Home")" class="btn-action">
                <i class="fas fa-comment-dots"></i> 查看反馈
            </a>
        </div>
    </div>

    <!-- 用户信息详情 -->
    <div class="user-info-section">
        <div class="info-title">
            <i class="fas fa-info-circle"></i> 账户信息
        </div>
        <div class="info-item">
            <span class="info-label">用户名</span>
            <span class="info-value">@Model.Username</span>
        </div>
        <div class="info-item">
            <span class="info-label">手机号码</span>
            <span class="info-value">@Model.PhoneNumber</span>
        </div>
        <div class="info-item">
            <span class="info-label">电子邮箱</span>
            <span class="info-value">@Model.Email</span>
        </div>
        <div class="info-item">
            <span class="info-label">用户ID</span>
            <span class="info-value">@Model.UserID</span>
        </div>
        <div class="info-item">
            <span class="info-label">注册时间</span>
            <span class="info-value">@Model.RegistrationDate.Value.ToString("yyyy-MM-dd HH:mm")</span>
        </div>
        @if (Model.LastLoginDate.HasValue)
        {
            <div class="info-item">
                <span class="info-label">最后登录</span>
                <span class="info-value">@Model.LastLoginDate.Value.ToString("yyyy-MM-dd HH:mm")</span>
            </div>
        }
    </div>
</div>

<!-- Anti-Forgery Token for AJAX -->
@Html.AntiForgeryToken()

<!-- 头像管理模态框 -->
<div id="avatarModal" class="unified-modal">
    <div class="unified-modal-content">
        <div class="unified-modal-header">
            <h3 class="unified-modal-title"><i class="fas fa-image"></i> 头像管理</h3>
            <button onclick="closeAvatarModal()" class="unified-modal-close">&times;</button>
        </div>

        <!-- 上传头像区域 -->
        <div class="unified-mb-5" style="padding: 20px; border: 2px dashed #667eea; border-radius: 10px; text-align: center;">
            <i class="fas fa-cloud-upload-alt unified-banner-icon" style="color: #667eea;"></i>
            <h4>上传自定义头像</h4>
            <p style="color: #666; font-size: 14px;">支持 JPG、PNG、GIF、BMP 格式，文件大小不超过 5MB</p>
            <input type="file" id="avatarFileInput" accept="image/*" style="display: none;" onchange="uploadAvatar()" />
            <button onclick="document.getElementById('avatarFileInput').click()" class="btn-action unified-mt-2">
                <i class="fas fa-folder-open"></i> 选择图片
            </button>
        </div>

        <!-- 默认头像选择 -->
        <div>
            <h4 class="unified-mb-3"><i class="fas fa-user-circle"></i> 选择默认头像</h4>
            <div class="unified-grid unified-grid-5">
                @for (int i = 1; i <= 5; i++)
                {
                    <div onclick="selectDefaultAvatar('avatar@(i).svg')" class="unified-transition" style="cursor: pointer; text-align: center;" onmouseover="this.style.transform='scale(1.1)'" onmouseout="this.style.transform='scale(1)'">
                        <img src="/Uploads/Avatars/Default/avatar@(i).svg" alt="默认头像@(i)" class="unified-transition" style="width: 80px; height: 80px; border-radius: 50%; border: 3px solid transparent;" onmouseover="this.style.borderColor='#667eea'" onmouseout="this.style.borderColor='transparent'" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // 自动隐藏成功消息
        $(document).ready(function () {
            setTimeout(function () {
                $('.success-alert').fadeOut('slow');
            }, 5000);
        });

        // 显示头像模态框
        function showAvatarModal() {
            document.getElementById('avatarModal').classList.add('show');
        }

        // 关闭头像模态框
        function closeAvatarModal() {
            document.getElementById('avatarModal').classList.remove('show');
        }

        // 上传头像
        function uploadAvatar() {
            var fileInput = document.getElementById('avatarFileInput');
            var file = fileInput.files[0];

            if (!file) {
                return;
            }

            // 验证文件类型
            var allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif', 'image/bmp'];
            if (!allowedTypes.includes(file.type)) {
                alert('只支持 JPG、PNG、GIF、BMP 格式的图片');
                fileInput.value = '';
                return;
            }

            // 验证文件大小
            if (file.size > 5 * 1024 * 1024) {
                alert('图片大小不能超过 5MB');
                fileInput.value = '';
                return;
            }

            // 创建FormData对象
            var formData = new FormData();
            formData.append('avatarFile', file);
            // 添加防伪令牌
            formData.append('__RequestVerificationToken', $('input[name="__RequestVerificationToken"]').val());

            // 显示上传中提示
            var originalHtml = document.querySelector('#avatarModal button.btn-action').innerHTML;
            document.querySelector('#avatarModal button.btn-action').innerHTML = '<i class="fas fa-spinner fa-spin"></i> 上传中...';
            document.querySelector('#avatarModal button.btn-action').disabled = true;

            // 发送AJAX请求
            $.ajax({
                url: '@Url.Action("UploadAvatar", "Home")',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    if (response.success) {
                        // 更新头像显示
                        updateAvatarDisplay(response.avatarUrl);
                        closeAvatarModal();
                        alert('头像上传成功！');
                    } else {
                        alert(response.message || '上传失败，请重试');
                    }
                },
                error: function () {
                    alert('上传失败，请检查网络连接');
                },
                complete: function () {
                    // 恢复按钮状态
                    document.querySelector('#avatarModal button.btn-action').innerHTML = originalHtml;
                    document.querySelector('#avatarModal button.btn-action').disabled = false;
                    fileInput.value = '';
                }
            });
        }

        // 选择默认头像
        function selectDefaultAvatar(avatarName) {
            if (!confirm('确定要使用这个默认头像吗？')) {
                return;
            }

            $.ajax({
                url: '@Url.Action("SetDefaultAvatar", "Home")',
                type: 'POST',
                data: { 
                    avatarName: avatarName,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (response) {
                    if (response.success) {
                        // 更新头像显示
                        updateAvatarDisplay(response.avatarUrl);
                        closeAvatarModal();
                        alert('默认头像设置成功！');
                    } else {
                        alert(response.message || '设置失败，请重试');
                    }
                },
                error: function () {
                    alert('设置失败，请检查网络连接');
                }
            });
        }

        // 更新页面上的头像显示
        function updateAvatarDisplay(avatarUrl) {
            var avatarDiv = document.getElementById('profileAvatar');
            avatarDiv.innerHTML = '<img src="' + avatarUrl + '" alt="用户头像" style="width: 100%; height: 100%; border-radius: 50%; object-fit: cover;" />';
        }

        // 点击模态框外部关闭
        document.getElementById('avatarModal').addEventListener('click', function (e) {
            if (e.target === this) {
                closeAvatarModal();
            }
        });
    </script>
}