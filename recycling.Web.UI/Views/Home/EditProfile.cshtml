@model recycling.Model.UpdateProfileViewModel
@{
    ViewBag.Title = "编辑个人信息";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .edit-profile-container {
        max-width: 500px;
        margin: 0 auto;
        padding: 30px;
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
    }

    .page-title {
        text-align: center;
        margin-bottom: 30px;
        color: #333;
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        font-weight: bold;
        color: #333;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        height: 50px;
        border-radius: 10px;
        border: 2px solid #e9ecef;
        font-size: 16px;
        transition: all 0.3s ease;
        padding: 0 15px;
    }

        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }

    .btn-submit {
        width: 100%;
        height: 50px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 10px;
        color: white;
        font-size: 16px;
        font-weight: bold;
        transition: all 0.3s ease;
        margin-bottom: 15px;
    }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }

    .btn-back {
        width: 100%;
        height: 50px;
        background: #6c757d;
        border: none;
        border-radius: 10px;
        color: white;
        font-size: 16px;
        transition: all 0.3s ease;
    }

        .btn-back:hover {
            background: #5a6268;
            color: white;
        }

    .validation-summary {
        background: #fff5f5;
        border-left: 4px solid #ff6b6b;
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 4px;
    }

    .field-icon {
        color: #667eea;
        margin-right: 10px;
    }
</style>

<!-- 在表单开始处添加提示 -->
<div class="alert alert-info">
    <i class="fas fa-info-circle"></i>
    <strong>提示：</strong>
    修改用户名、手机号或邮箱后，需要至少有一项信息与原来不同才能保存。
</div>

<div class="edit-profile-container">
    <h2 class="page-title">
        <i class="fas fa-user-edit"></i> 编辑个人信息
    </h2>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="validation-summary">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
    }

    @using (Html.BeginForm("EditProfile", "Home", FormMethod.Post, new { @class = "edit-profile-form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label class="form-label">
                <i class="fas fa-user field-icon"></i> 用户名
            </label>
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "请输入用户名" })
            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="form-label">
                <i class="fas fa-phone field-icon"></i> 手机号码
            </label>
            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "请输入手机号码" })
            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="form-label">
                <i class="fas fa-envelope field-icon"></i> 电子邮箱
            </label>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "请输入电子邮箱" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn-submit">
            <i class="fas fa-save"></i> 保存修改
        </button>

        <a href="@Url.Action("Profile", "Home")" class="btn btn-back">
            <i class="fas fa-arrow-left"></i> 返回个人中心
        </a>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}