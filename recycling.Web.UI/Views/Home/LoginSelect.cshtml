@{
    ViewBag.Title = "选择登录类型";
}

<!-- 引用现有登录页样式，保持UI一致性 -->
<link href="~/Content/login.css" rel="stylesheet" />

<div class="login-container">
    <h2 class="login-title">请选择登录类型</h2>

    <div class="login-buttons" style="margin-top: 40px; flex-direction: column; gap: 15px;">
        <!-- 用户登录按钮 -->
        <a href="@Url.Action("Login", "User")" class="btn btn-login" style="width: 100%; margin: 0;">
            用户登录
        </a>

        <!-- 工作人员登录按钮 -->
        <a href="@Url.Action("Login", "Staff")" class="btn btn-login" style="width: 100%; margin: 0; background-color: #337ab7; border-color: #2e6da4;">
            工作人员登录
        </a>

        <!-- 取消按钮（返回首页） -->
        <a href="@Url.Action("Index", "Home")" class="btn btn-cancel" style="width: 100%; margin: 0;">
            取消
        </a>
    </div>
</div>

