@model List<recycling.Model.UserAddresses>
@{
    ViewBag.Title = "地址管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .address-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 30px 20px;
    }

    .address-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .address-title {
        font-size: 28px;
        font-weight: bold;
        color: #2c3e50;
    }

    .address-title i {
        color: #667eea;
        margin-right: 10px;
    }

    .btn-add-address {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 12px 25px;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .btn-add-address:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
    }

    .address-list {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .address-card {
        background: white;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 3px 15px rgba(0, 0, 0, 0.08);
        border: 2px solid transparent;
        transition: all 0.3s ease;
        position: relative;
    }

    .address-card:hover {
        border-color: #667eea;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    }

    .address-card.default {
        border-color: #27ae60;
        background: linear-gradient(135deg, #f8fff9 0%, #e8f5e9 100%);
    }

    .default-badge {
        position: absolute;
        top: -10px;
        left: 20px;
        background: #27ae60;
        color: white;
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: bold;
    }

    .address-content {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }

    .address-info {
        flex: 1;
    }

    .contact-info {
        font-size: 18px;
        font-weight: bold;
        color: #2c3e50;
        margin-bottom: 10px;
    }

    .contact-info .phone {
        color: #667eea;
        margin-left: 15px;
        font-weight: normal;
    }

    .full-address {
        color: #666;
        font-size: 15px;
        line-height: 1.6;
    }

    .address-actions {
        display: flex;
        gap: 10px;
        margin-top: 15px;
    }

    .btn-action {
        padding: 8px 16px;
        border: none;
        border-radius: 6px;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .btn-edit {
        background: #3498db;
        color: white;
    }

    .btn-edit:hover {
        background: #2980b9;
    }

    .btn-delete {
        background: #e74c3c;
        color: white;
    }

    .btn-delete:hover {
        background: #c0392b;
    }

    .btn-set-default {
        background: #f39c12;
        color: white;
    }

    .btn-set-default:hover {
        background: #e67e22;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        background: white;
        border-radius: 12px;
        box-shadow: 0 3px 15px rgba(0, 0, 0, 0.08);
    }

    .empty-state i {
        font-size: 64px;
        color: #bdc3c7;
        margin-bottom: 20px;
    }

    .empty-state h3 {
        color: #7f8c8d;
        margin-bottom: 10px;
    }

    .empty-state p {
        color: #95a5a6;
    }

    /* 模态框样式 */
    .modal-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 9999;
        justify-content: center;
        align-items: center;
    }

    .modal-content {
        background: white;
        padding: 30px;
        border-radius: 15px;
        max-width: 500px;
        width: 90%;
        max-height: 90vh;
        overflow-y: auto;
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 2px solid #f0f0f0;
    }

    .modal-title {
        font-size: 22px;
        font-weight: bold;
        color: #2c3e50;
    }

    .modal-close {
        background: none;
        border: none;
        font-size: 28px;
        cursor: pointer;
        color: #7f8c8d;
        transition: color 0.3s;
    }

    .modal-close:hover {
        color: #e74c3c;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 8px;
    }

    .form-label.required::after {
        content: " *";
        color: #e74c3c;
    }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        font-size: 15px;
        transition: border-color 0.3s;
        box-sizing: border-box;
    }

    .form-control:focus {
        border-color: #667eea;
        outline: none;
    }

    .form-control[readonly] {
        background: #f8f9fa;
        cursor: not-allowed;
    }

    .form-row {
        display: flex;
        gap: 15px;
    }

    .form-row .form-group {
        flex: 1;
    }

    .btn-submit {
        width: 100%;
        padding: 15px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
    }

    .btn-submit:disabled {
        background: #bdc3c7;
        cursor: not-allowed;
        transform: none;
        box-shadow: none;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: #667eea;
        text-decoration: none;
        margin-bottom: 20px;
        font-size: 15px;
        transition: color 0.3s;
    }

    .back-link:hover {
        color: #764ba2;
    }

    .alert {
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .alert-success {
        background: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-danger {
        background: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    @@media (max-width: 768px) {
        .address-header {
            flex-direction: column;
            gap: 15px;
            text-align: center;
        }

        .address-content {
            flex-direction: column;
        }

        .address-actions {
            flex-wrap: wrap;
        }

        .form-row {
            flex-direction: column;
            gap: 0;
        }
    }
</style>

<div class="address-container">
    <!-- 返回链接 -->
    <a href="@Url.Action("Profile", "Home")" class="back-link">
        <i class="fas fa-arrow-left"></i> 返回个人中心
    </a>

    <!-- 页面头部 -->
    <div class="address-header">
        <h1 class="address-title">
            <i class="fas fa-map-marker-alt"></i>地址管理
        </h1>
        <button class="btn-add-address" onclick="showAddModal()">
            <i class="fas fa-plus"></i> 新增地址
        </button>
    </div>

    <!-- 提示消息 -->
    <div id="messageAlert" class="alert" style="display: none;"></div>

    <!-- 地址列表 -->
    <div class="address-list" id="addressList">
        @if (Model != null && Model.Count > 0)
        {
            foreach (var address in Model)
            {
                <div class="address-card @(address.IsDefault ? "default" : "")" data-address-id="@address.AddressID">
                    @if (address.IsDefault)
                    {
                        <div class="default-badge"><i class="fas fa-star"></i> 默认地址</div>
                    }
                    <div class="address-content">
                        <div class="address-info">
                            <div class="contact-info">
                                <span class="name">@address.ContactName</span>
                                <span class="phone">@address.ContactPhone</span>
                            </div>
                            <div class="full-address">
                                @address.FullAddress
                            </div>
                        </div>
                    </div>
                    <div class="address-actions">
                        <button class="btn-action btn-edit" onclick="showEditModal(@address.AddressID)">
                            <i class="fas fa-edit"></i> 编辑
                        </button>
                        <button class="btn-action btn-delete" onclick="deleteAddress(@address.AddressID)">
                            <i class="fas fa-trash"></i> 删除
                        </button>
                        @if (!address.IsDefault)
                        {
                            <button class="btn-action btn-set-default" onclick="setDefaultAddress(@address.AddressID)">
                                <i class="fas fa-star"></i> 设为默认
                            </button>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-map-marker-alt"></i>
                <h3>暂无收货地址</h3>
                <p>点击"新增地址"添加您的第一个收货地址</p>
            </div>
        }
    </div>
</div>

<!-- 新增/编辑地址模态框 -->
<div class="modal-overlay" id="addressModal">
    <div class="modal-content">
        <div class="modal-header">
            <h3 class="modal-title" id="modalTitle">新增地址</h3>
            <button class="modal-close" onclick="closeModal()">&times;</button>
        </div>
        <form id="addressForm">
            @Html.AntiForgeryToken()
            <input type="hidden" id="editAddressId" name="addressId" value="0" />
            
            <div class="form-row">
                <div class="form-group">
                    <label class="form-label">省份</label>
                    <input type="text" class="form-control" value="广东省" readonly />
                </div>
                <div class="form-group">
                    <label class="form-label">城市</label>
                    <input type="text" class="form-control" value="深圳市" readonly />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label class="form-label">区域</label>
                    <input type="text" class="form-control" value="罗湖区" readonly />
                </div>
                <div class="form-group">
                    <label class="form-label required">街道</label>
                    <select class="form-control" id="streetSelect" name="street" required>
                        <option value="">请选择街道</option>
                        @foreach (var street in ViewBag.Streets as Dictionary<string, string>)
                        {
                            <option value="@street.Key">@street.Value</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="form-label required">详细地址</label>
                <input type="text" class="form-control" id="detailAddress" name="detailAddress" 
                       placeholder="请输入详细地址，如门牌号、楼层、房间号等" required maxlength="200" />
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label class="form-label required">联系人</label>
                    <input type="text" class="form-control" id="contactName" name="contactName" 
                           placeholder="请输入联系人姓名" required maxlength="50" />
                </div>
                <div class="form-group">
                    <label class="form-label required">联系电话</label>
                    <input type="tel" class="form-control" id="contactPhone" name="contactPhone" 
                           placeholder="请输入11位手机号" required pattern="^1[3-9]\d{9}$" maxlength="11" />
                </div>
            </div>

            <div class="form-group" id="defaultCheckboxGroup">
                <label style="display: flex; align-items: center; gap: 10px; cursor: pointer;">
                    <input type="checkbox" id="isDefault" name="isDefault" style="width: 18px; height: 18px;" />
                    <span>设为默认地址</span>
                </label>
            </div>

            <button type="submit" class="btn-submit" id="submitBtn">
                <i class="fas fa-save"></i> 保存地址
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        var isEditMode = false;
        var currentEditId = 0;

        // 显示新增模态框
        function showAddModal() {
            isEditMode = false;
            currentEditId = 0;
            document.getElementById('modalTitle').textContent = '新增地址';
            document.getElementById('editAddressId').value = '0';
            document.getElementById('addressForm').reset();
            document.getElementById('defaultCheckboxGroup').style.display = 'block';
            document.getElementById('addressModal').style.display = 'flex';
        }

        // 显示编辑模态框
        function showEditModal(addressId) {
            isEditMode = true;
            currentEditId = addressId;
            document.getElementById('modalTitle').textContent = '编辑地址';
            document.getElementById('editAddressId').value = addressId;
            document.getElementById('defaultCheckboxGroup').style.display = 'none';

            // 获取地址详情
            $.ajax({
                url: '@Url.Action("GetAddressDetail", "Home")',
                type: 'POST',
                data: {
                    addressId: addressId,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        var addr = response.address;
                        // 根据街道名称查找对应的key
                        var streetSelect = document.getElementById('streetSelect');
                        for (var i = 0; i < streetSelect.options.length; i++) {
                            if (streetSelect.options[i].text === addr.street) {
                                streetSelect.selectedIndex = i;
                                break;
                            }
                        }
                        document.getElementById('detailAddress').value = addr.detailAddress;
                        document.getElementById('contactName').value = addr.contactName;
                        document.getElementById('contactPhone').value = addr.contactPhone;
                        document.getElementById('addressModal').style.display = 'flex';
                    } else {
                        showMessage(response.message, 'danger');
                    }
                },
                error: function() {
                    showMessage('获取地址详情失败', 'danger');
                }
            });
        }

        // 关闭模态框
        function closeModal() {
            document.getElementById('addressModal').style.display = 'none';
        }

        // 表单提交
        document.getElementById('addressForm').addEventListener('submit', function(e) {
            e.preventDefault();

            var street = document.getElementById('streetSelect').value;
            var detailAddress = document.getElementById('detailAddress').value.trim();
            var contactName = document.getElementById('contactName').value.trim();
            var contactPhone = document.getElementById('contactPhone').value.trim();

            // 验证
            if (!street) {
                showMessage('请选择街道', 'danger');
                return;
            }
            if (!detailAddress) {
                showMessage('请输入详细地址', 'danger');
                return;
            }
            if (!contactName) {
                showMessage('请输入联系人姓名', 'danger');
                return;
            }
            if (!contactPhone || !/^1[3-9]\d{9}$/.test(contactPhone)) {
                showMessage('请输入有效的11位手机号码', 'danger');
                return;
            }

            var submitBtn = document.getElementById('submitBtn');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> 保存中...';

            if (isEditMode) {
                // 更新地址
                $.ajax({
                    url: '@Url.Action("UpdateAddress", "Home")',
                    type: 'POST',
                    data: {
                        addressId: currentEditId,
                        street: street,
                        detailAddress: detailAddress,
                        contactName: contactName,
                        contactPhone: contactPhone,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        submitBtn.disabled = false;
                        submitBtn.innerHTML = '<i class="fas fa-save"></i> 保存地址';
                        if (response.success) {
                            showMessage(response.message, 'success');
                            closeModal();
                            setTimeout(function() {
                                location.reload();
                            }, 1000);
                        } else {
                            showMessage(response.message, 'danger');
                        }
                    },
                    error: function() {
                        submitBtn.disabled = false;
                        submitBtn.innerHTML = '<i class="fas fa-save"></i> 保存地址';
                        showMessage('更新地址失败，请重试', 'danger');
                    }
                });
            } else {
                // 新增地址
                var isDefault = document.getElementById('isDefault').checked;
                $.ajax({
                    url: '@Url.Action("AddAddress", "Home")',
                    type: 'POST',
                    data: {
                        street: street,
                        detailAddress: detailAddress,
                        contactName: contactName,
                        contactPhone: contactPhone,
                        isDefault: isDefault,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        submitBtn.disabled = false;
                        submitBtn.innerHTML = '<i class="fas fa-save"></i> 保存地址';
                        if (response.success) {
                            showMessage(response.message, 'success');
                            closeModal();
                            setTimeout(function() {
                                location.reload();
                            }, 1000);
                        } else {
                            showMessage(response.message, 'danger');
                        }
                    },
                    error: function() {
                        submitBtn.disabled = false;
                        submitBtn.innerHTML = '<i class="fas fa-save"></i> 保存地址';
                        showMessage('添加地址失败，请重试', 'danger');
                    }
                });
            }
        });

        // 删除地址
        function deleteAddress(addressId) {
            if (!confirm('确定要删除这个地址吗？')) {
                return;
            }

            $.ajax({
                url: '@Url.Action("DeleteAddress", "Home")',
                type: 'POST',
                data: {
                    addressId: addressId,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        showMessage(response.message, 'success');
                        // 移除地址卡片
                        var card = document.querySelector('.address-card[data-address-id="' + addressId + '"]');
                        if (card) {
                            card.remove();
                        }
                        // 检查是否还有地址
                        var remainingCards = document.querySelectorAll('.address-card');
                        if (remainingCards.length === 0) {
                            document.getElementById('addressList').innerHTML = `
                                <div class="empty-state">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <h3>暂无收货地址</h3>
                                    <p>点击"新增地址"添加您的第一个收货地址</p>
                                </div>
                            `;
                        } else {
                            // 刷新页面以更新默认地址状态
                            setTimeout(function() {
                                location.reload();
                            }, 1000);
                        }
                    } else {
                        showMessage(response.message, 'danger');
                    }
                },
                error: function() {
                    showMessage('删除地址失败，请重试', 'danger');
                }
            });
        }

        // 设置默认地址
        function setDefaultAddress(addressId) {
            $.ajax({
                url: '@Url.Action("SetDefaultAddress", "Home")',
                type: 'POST',
                data: {
                    addressId: addressId,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        showMessage(response.message, 'success');
                        setTimeout(function() {
                            location.reload();
                        }, 1000);
                    } else {
                        showMessage(response.message, 'danger');
                    }
                },
                error: function() {
                    showMessage('设置默认地址失败，请重试', 'danger');
                }
            });
        }

        // 显示消息
        function showMessage(message, type) {
            var alert = document.getElementById('messageAlert');
            alert.className = 'alert alert-' + type;
            alert.textContent = message;
            alert.style.display = 'block';

            // 滚动到顶部
            window.scrollTo({ top: 0, behavior: 'smooth' });

            // 5秒后自动隐藏
            setTimeout(function() {
                alert.style.display = 'none';
            }, 5000);
        }

        // 点击模态框外部关闭
        document.getElementById('addressModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeModal();
            }
        });

        // ESC键关闭模态框
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeModal();
            }
        });
    </script>
}
