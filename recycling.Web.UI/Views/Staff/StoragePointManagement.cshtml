    // 显示运输人员列表
    function displayTransporters(transporters) {
        var $list = $('#transporterList');
        $list.empty();
        
        if (transporters.length === 0) {
            $list.html('<div class="empty-transporters"><i class="glyphicon glyphicon-user"></i><p>暂无可用的运输人员</p><p style="color: #999; font-size: 14px; margin-top: 10px;">当前区域没有可用的运输人员</p></div>');
            return;
        }
        
        transporters.forEach(function (transporter) {
            var card = $('<div class="transporter-card"></div>');
            
            var ratingHtml = '';
            if (transporter.rating) {
                ratingHtml = '<div class="transporter-rating">';
                var fullStars = Math.floor(transporter.rating);
                for (var i = 0; i < fullStars; i++) {
                    ratingHtml += '<i class="glyphicon glyphicon-star"></i>';
                }
                // Show remaining empty stars (out of 5)
                var emptyStars = 5 - fullStars;
                for (var i = 0; i < emptyStars; i++) {
                    ratingHtml += '<i class="glyphicon glyphicon-star-empty"></i>';
                }
                ratingHtml += ' ' + transporter.rating.toFixed(1) + '</div>';
            }
            
            var vehicleInfo = transporter.vehicleType || '未知车型';
            if (transporter.vehicleCapacity) {
                vehicleInfo += ' (' + transporter.vehicleCapacity + ' kg)';
            }
            
            card.html(
                '<div class="transporter-header">' +
                    '<div class="transporter-name">' + (transporter.fullName || transporter.username) + '</div>' +
                    ratingHtml +
                '</div>' +
                '<div class="transporter-info">' +
                    '<div class="info-item"><i class="glyphicon glyphicon-phone"></i> ' + transporter.phoneNumber + '</div>' +
                    '<div class="info-item"><i class="glyphicon glyphicon-map-marker"></i> ' + transporter.region + '</div>' +
                    '<div class="info-item"><i class="glyphicon glyphicon-road"></i> ' + transporter.vehiclePlateNumber + '</div>' +
                    '<div class="info-item"><i class="glyphicon glyphicon-dashboard"></i> ' + vehicleInfo + '</div>' +
                '</div>' +
                '<div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px; margin-top: 10px;">' +
                    '<button class="btn-call" data-phone="' + $('<div>').text(transporter.phoneNumber).html() + '" data-name="' + $('<div>').text(transporter.fullName || transporter.username).html() + '">' +
                        '<i class="glyphicon glyphicon-earphone"></i> 拨打电话' +
                    '</button>' +
                    '<button class="btn-select-transporter" data-id="' + transporter.transporterId + '" data-name="' + $('<div>').text(transporter.fullName || transporter.username).html() + '" data-phone="' + $('<div>').text(transporter.phoneNumber).html() + '">' +
                        '<i class="glyphicon glyphicon-ok"></i> 选择此人' +
                    '</button>' +
                '</div>'
            );
            
            // Add event listener with proper data binding for calling
            card.find('.btn-call').on('click', function() {
                var phone = $(this).data('phone');
                var name = $(this).data('name');
                callTransporter(phone, name);
            });
            
            // Add event listener for selecting transporter
            card.find('.btn-select-transporter').on('click', function() {
                var id = $(this).data('id');
                var name = $(this).data('name');
                var phone = $(this).data('phone');
                selectTransporter(id, name, phone);
            });
            
            $list.append(card);
        });
    }

    // 关闭运输人员模态框
    function closeTransporterModal() {
        $('#transporterModal').hide();
    }

    // 拨打电话
    function callTransporter(phoneNumber, name) {
        if (confirm('确认拨打电话给 ' + name + ' (' + phoneNumber + ') 吗？')) {
            window.location.href = 'tel:' + phoneNumber;
        }
    }

    // 选择运输人员
    function selectTransporter(transporterId, transporterName, transporterPhone) {
        // 关闭运输人员列表模态框
        closeTransporterModal();
        
        // 显示创建运输单模态框
        $('#selectedTransporterId').val(transporterId);
        $('#selectedTransporterName').text(transporterName + ' (' + transporterPhone + ')');
        
        // 自动填充表单数据（只读字段）
        $('#pickupAddress').val(storagePointData.pickupAddress || '回收员暂存点');
        $('#destinationAddress').val('深圳基地'); // 固定值
        $('#estimatedWeight').val(storagePointData.totalWeight.toFixed(2));
        $('#itemTotalValue').val(storagePointData.totalValue.toFixed(2));
        $('#itemCategories').val(storagePointData.itemCategories);
        
        // 清空可编辑字段
        $('#baseContactPerson').val('');
        $('#baseContactPhone').val('');
        $('#specialInstructions').val('');
        
        // 加载基地工作人员列表
        loadBaseStaffList();
        
        // 显示模态框
        $('#createOrderModal').show();
    }

    // 加载基地工作人员列表
    function loadBaseStaffList() {
        // 如果已经加载过，直接填充下拉列表
        if (baseStaffList.length > 0) {
            populateBaseStaffDropdown();
            return;
        }
        
        // 从服务器加载基地工作人员列表
        $.ajax({
            url: '@Url.Action("GetBaseStaffList", "Staff")',
            type: 'POST',
            data: {
                __RequestVerificationToken: tokenValue
            },
            success: function(response) {
                if (response.success && response.data) {
                    baseStaffList = response.data;
                    populateBaseStaffDropdown();
                } else {
                    showError('获取基地工作人员失败：' + (response.message || '未知错误'));
                }
            },
            error: function(xhr, status, error) {
                var errorMsg = '加载基地工作人员失败';
                if (xhr.responseJSON && xhr.responseJSON.message) {
                    errorMsg = xhr.responseJSON.message;
                }
                showError(errorMsg);
                console.error('加载基地工作人员错误:', { status: xhr.status, error: error, response: xhr.responseText });
            }
        });
    }

    // 填充基地工作人员下拉列表
    function populateBaseStaffDropdown() {
        var $select = $('#baseContactPerson');
        $select.empty();
        $select.append('<option value="">请选择基地联系人</option>');
        
        baseStaffList.forEach(function(staff) {
            var displayText = staff.fullName;
            if (staff.position) {
                displayText += ' (' + staff.position + ')';
            }
            $select.append(
                $('<option></option>')
                    .attr('value', staff.workerId)
                    .attr('data-phone', staff.phoneNumber)
                    .attr('data-name', staff.fullName)
                    .text(displayText)
            );
        });
    }

    // 更新基地联系人电话
    function updateBaseContactPhone() {
        var $select = $('#baseContactPerson');
        var selectedOption = $select.find('option:selected');
        var phone = selectedOption.attr('data-phone') || '';
        $('#baseContactPhone').val(phone);
    }

    // 关闭创建运输单模态框
    function closeOrderModal() {
        $('#createOrderModal').hide();
    }

    // 绑定创建运输单表单提交事件
    $(document).ready(function() {
        // 绑定关闭按钮
        $('#btnCloseOrderModal').on('click', function() {
            closeOrderModal();
        });
        
        // 点击遮罩层关闭
        $('#createOrderModal').on('click', function(e) {
            if (e.target.id === 'createOrderModal') {
                closeOrderModal();
            }
        });
        
        // 提交表单
        $('#transportOrderForm').on('submit', function(e) {
            e.preventDefault();
            createTransportationOrder();
        });
    });

    // 创建运输单
    function createTransportationOrder() {
        // 获取表单数据
        var transporterId = $('#selectedTransporterId').val();
        var pickupAddress = $('#pickupAddress').val().trim();
        var estimatedWeight = parseFloat($('#estimatedWeight').val());
        var itemTotalValue = parseFloat($('#itemTotalValue').val());
        var itemCategories = $('#itemCategories').val().trim();
        
        // 从下拉列表获取基地联系人信息
        var $baseContactSelect = $('#baseContactPerson');
        var selectedOption = $baseContactSelect.find('option:selected');
        var baseContactPerson = selectedOption.attr('data-name') || '';
        var baseContactPhone = $('#baseContactPhone').val().trim();
        var specialInstructions = $('#specialInstructions').val().trim();

        // 验证必填字段
        if (!transporterId || transporterId <= 0) {
            alert('请选择运输人员');
            return;
        }

        if (!pickupAddress) {
            alert('取货地址不能为空');
            return;
        }

        if (!estimatedWeight || estimatedWeight <= 0) {
            alert('预估重量必须大于0');
            return;
        }

        if (!baseContactPerson || !baseContactPhone) {
            alert('请选择基地联系人');
            return;
        }

        // 发送创建请求
        $.ajax({
            url: '@Url.Action("CreateTransportationOrder", "Staff")',
            type: 'POST',
            data: {
                __RequestVerificationToken: tokenValue,
                transporterId: transporterId,
                pickupAddress: pickupAddress,
                estimatedWeight: estimatedWeight,
                itemTotalValue: itemTotalValue,
                itemCategories: itemCategories,
                baseContactPerson: baseContactPerson,
                baseContactPhone: baseContactPhone,
                specialInstructions: specialInstructions
            },
            beforeSend: function() {
                // 禁用提交按钮
                $('#transportOrderForm button[type="submit"]').prop('disabled', true).html('<i class="glyphicon glyphicon-refresh glyphicon-spin"></i> 创建中...');
            },
            success: function(response) {
                if (response.success) {
                    alert('运输单创建成功！运输单号：' + (response.orderNumber || ''));
                    closeOrderModal();
                    // 可选：刷新页面或更新库存数据
                    loadSummary();
                } else {
                    alert('创建失败：' + response.message);
                }
            },
            error: function(xhr, status, error) {
                var errorMsg = '创建运输单失败';
                if (xhr.responseJSON && xhr.responseJSON.message) {
                    errorMsg = xhr.responseJSON.message;
                } else if (xhr.responseText) {
                    try {
                        var jsonResponse = JSON.parse(xhr.responseText);
                        if (jsonResponse.message) {
                            errorMsg = jsonResponse.message;
                        }
                    } catch (e) {
                        errorMsg += '（状态: ' + xhr.status + '）';
                    }
                }
                alert(errorMsg);
                console.error('创建运输单错误:', { status: xhr.status, error: error, response: xhr.responseText });
            },
            complete: function() {
                // 恢复提交按钮
                $('#transportOrderForm button[type="submit"]').prop('disabled', false).html('<i class="glyphicon glyphicon-ok"></i> 创建运输单');
            }
        });
    }

