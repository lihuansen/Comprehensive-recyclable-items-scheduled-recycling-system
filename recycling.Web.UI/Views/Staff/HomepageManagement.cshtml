@{
    ViewBag.Title = "首页页面管理";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .page-header {
        margin-bottom: 40px;
        padding-bottom: 15px;
        border-bottom: 2px solid #e0e0e0;
    }

    .page-title {
        font-size: 32px;
        font-weight: bold;
        color: #333;
        margin: 0;
    }

    .management-cards {
        display: flex;
        justify-content: center;
        gap: 40px;
        flex-wrap: wrap;
        margin-top: 50px;
    }

    .management-card {
        background: white;
        border-radius: 15px;
        padding: 40px 30px;
        width: 400px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        text-align: center;
        transition: all 0.3s ease;
        cursor: pointer;
        text-decoration: none;
        color: inherit;
    }

    .management-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        text-decoration: none;
        color: inherit;
    }

    .card-icon {
        font-size: 80px;
        margin-bottom: 20px;
        background: linear-gradient(45deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .card-title {
        font-size: 24px;
        font-weight: bold;
        color: #333;
        margin-bottom: 15px;
    }

    .card-description {
        font-size: 16px;
        color: #666;
        line-height: 1.6;
    }

    .card-features {
        margin-top: 20px;
        padding-top: 20px;
        border-top: 1px solid #e0e0e0;
        text-align: left;
    }

    .card-features li {
        font-size: 14px;
        color: #555;
        margin-bottom: 8px;
        list-style: none;
        position: relative;
        padding-left: 25px;
    }

    .card-features li:before {
        content: "✓";
        position: absolute;
        left: 0;
        color: #28a745;
        font-weight: bold;
        font-size: 16px;
    }

    @@media (max-width: 768px) {
        .management-cards {
            flex-direction: column;
            align-items: center;
        }

        .management-card {
            width: 90%;
            max-width: 400px;
        }
    }
</style>

<div class="container-fluid">
    <div class="page-header">
        <h1 class="page-title">首页页面管理</h1>
        <p style="color: #666; margin-top: 10px; font-size: 16px;">
            管理用户首页的轮播内容和可回收物品信息
        </p>
    </div>

    <div class="management-cards">
        <a href="@Url.Action("HomepageCarouselManagement", "Staff")" class="management-card">
            <div class="card-icon">
                <i class="fas fa-images"></i>
            </div>
            <div class="card-title">轮播管理</div>
            <div class="card-description">
                管理首页的图片和视频轮播内容
            </div>
            <ul class="card-features">
                <li>新增/修改/删除轮播内容</li>
                <li>支持图片和视频混合轮播</li>
                <li>自定义轮播顺序和显示状态</li>
                <li>超过2个内容自动8秒轮播</li>
            </ul>
        </a>

        <a href="@Url.Action("RecyclableItemsManagement", "Staff")" class="management-card">
            <div class="card-icon">
                <i class="fas fa-recycle"></i>
            </div>
            <div class="card-title">可回收物管理</div>
            <div class="card-description">
                管理首页展示的可回收物品信息
            </div>
            <ul class="card-features">
                <li>新增/修改/删除可回收物品</li>
                <li>设置物品价格和分类</li>
                <li>自定义物品排序和状态</li>
                <li>支持多品类管理（玻璃、金属等）</li>
            </ul>
        </a>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
}