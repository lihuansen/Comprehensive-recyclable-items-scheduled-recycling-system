@{
    ViewBag.Title = "运输管理";
    Layout = "~/Views/Shared/_TransporterLayout.cshtml";
}

<style>
    .transport-management-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 20px;
    }

    .statistics-header {
        background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
        color: white;
        padding: 25px;
        border-radius: 15px;
        margin-bottom: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .stat-item {
        background: rgba(255,255,255,0.2);
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        backdrop-filter: blur(10px);
    }

    .stat-number {
        font-size: 32px;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .stat-label {
        font-size: 14px;
        opacity: 0.9;
    }

    .filter-section {
        background: white;
        padding: 25px;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        margin-bottom: 30px;
    }

    .filter-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 20px;
        align-items: end;
    }

    .filter-group {
        margin-bottom: 0;
        min-width: 0;
        display: flex;
        flex-direction: column;
    }

    .filter-label {
        font-weight: 600;
        color: #333;
        margin-bottom: 8px;
        display: block;
        font-size: 13px;
    }

    .form-control {
        border: 2px solid #e9ecef;
        border-radius: 8px;
        padding: 10px 12px;
        transition: all 0.3s ease;
        font-size: 13px;
        width: 100%;
        box-sizing: border-box;
        height: 42px;
    }

    .form-control:focus {
        border-color: #3498db;
        box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
    }

    select.form-control {
        -webkit-appearance: none;
        -moz-appearance: none;
        background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='%23666' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6 9 12 15 18 9'%3e%3c/polyline%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right 12px center;
        background-size: 16px;
        padding-right: 40px;
    }

    .btn-search {
        background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
        height: 42px;
        font-size: 13px;
    }

    .btn-search:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(52, 152, 219, 0.4);
    }

    .orders-section {
        background: white;
        padding: 25px;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
    }

    .order-card {
        border: 2px solid #e9ecef;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
        transition: all 0.3s ease;
    }

    .order-card:hover {
        border-color: #3498db;
        box-shadow: 0 5px 15px rgba(52, 152, 219, 0.2);
    }

    .order-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
        padding-bottom: 15px;
        border-bottom: 2px solid #f8f9fa;
    }

    .order-number {
        font-size: 18px;
        font-weight: bold;
        color: #333;
    }

    .status-badge {
        padding: 6px 16px;
        border-radius: 20px;
        font-size: 13px;
        font-weight: 600;
    }

    .status-pending {
        background: #fff3cd;
        color: #856404;
    }

    .status-in-transit {
        background: #cfe2ff;
        color: #084298;
    }

    .status-completed {
        background: #d1e7dd;
        color: #0f5132;
    }

    .order-details {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 15px;
        margin-bottom: 15px;
    }

    .detail-item {
        display: flex;
        align-items: start;
        gap: 8px;
    }

    .detail-icon {
        color: #3498db;
        margin-top: 2px;
    }

    .detail-content {
        flex: 1;
    }

    .detail-label {
        font-size: 12px;
        color: #6c757d;
        margin-bottom: 2px;
    }

    .detail-value {
        font-size: 14px;
        color: #333;
        font-weight: 500;
    }

    .order-actions {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        margin-top: 15px;
        padding-top: 15px;
        border-top: 2px solid #f8f9fa;
    }

    .btn-action {
        padding: 8px 20px;
        border-radius: 8px;
        border: none;
        font-weight: 600;
        font-size: 13px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-accept {
        background: #28a745;
        color: white;
    }

    .btn-accept:hover {
        background: #218838;
        transform: translateY(-2px);
    }

    .btn-start {
        background: #007bff;
        color: white;
    }

    .btn-start:hover {
        background: #0056b3;
        transform: translateY(-2px);
    }

    .btn-complete {
        background: #17a2b8;
        color: white;
    }

    .btn-complete:hover {
        background: #138496;
        transform: translateY(-2px);
    }

    .btn-view {
        background: #6c757d;
        color: white;
    }

    .btn-view:hover {
        background: #5a6268;
        transform: translateY(-2px);
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #6c757d;
    }

    .empty-state i {
        font-size: 64px;
        margin-bottom: 20px;
        opacity: 0.5;
    }

    .empty-state h3 {
        font-size: 20px;
        margin-bottom: 10px;
        color: #495057;
    }

    .loading-spinner {
        text-align: center;
        padding: 40px;
    }

    .spinner {
        border: 4px solid #f3f3f3;
        border-top: 4px solid #3498db;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        animation: spin 1s linear infinite;
        margin: 0 auto 20px;
    }

    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    .alert-message {
        padding: 12px 16px;
        border-radius: 8px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .alert-success {
        background: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-error {
        background: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    /* 完成运输模态框 */
    .modal-content {
        border-radius: 15px;
        border: none;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }

    .modal-header {
        background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
        color: white;
        border-radius: 15px 15px 0 0;
        border: none;
    }

    .modal-body {
        padding: 30px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: 600;
        color: #333;
        margin-bottom: 8px;
        display: block;
    }

    .modal-footer {
        border-top: 1px solid #e9ecef;
        padding: 20px 30px;
    }

    @@media (max-width: 768px) {
        .filter-row {
            grid-template-columns: 1fr;
        }

        .order-details {
            grid-template-columns: 1fr;
        }

        .order-actions {
            flex-direction: column;
        }

        .btn-action {
            width: 100%;
        }
    }
</style>

<div class="transport-management-container">
    <!-- 统计数据 -->
    <div class="statistics-header">
        <h2 style="margin: 0 0 5px 0; font-size: 24px;">
            <i class="fas fa-truck"></i> 运输管理
        </h2>
        <p style="margin: 0; opacity: 0.9;">管理您的运输单</p>

        <div class="stats-grid">
            <div class="stat-item">
                <div class="stat-number" id="pendingCount">0</div>
                <div class="stat-label"><i class="fas fa-clock"></i> 待接单</div>
            </div>
            <div class="stat-item">
                <div class="stat-number" id="inTransitCount">0</div>
                <div class="stat-label"><i class="fas fa-truck-moving"></i> 运输中</div>
            </div>
            <div class="stat-item">
                <div class="stat-number" id="completedCount">0</div>
                <div class="stat-label"><i class="fas fa-check-circle"></i> 已完成</div>
            </div>
            <div class="stat-item">
                <div class="stat-number" id="totalCount">0</div>
                <div class="stat-label"><i class="fas fa-list"></i> 总计</div>
            </div>
        </div>
    </div>

    <!-- 筛选区域 -->
    <div class="filter-section">
        <div class="filter-row">
            <div class="filter-group">
                <label class="filter-label">
                    <i class="fas fa-filter"></i> 状态筛选
                </label>
                <select class="form-control" id="statusFilter">
                    <option value="all">全部状态</option>
                    <option value="待接单">待接单</option>
                    <option value="运输中">运输中</option>
                    <option value="已完成">已完成</option>
                </select>
            </div>
            <div class="filter-group">
                <button class="btn-search" onclick="loadOrders()">
                    <i class="fas fa-search"></i> 查询
                </button>
            </div>
        </div>
    </div>

    <!-- 运输单列表 -->
    <div class="orders-section">
        <div id="alertContainer"></div>
        <div id="ordersContainer">
            <div class="loading-spinner">
                <div class="spinner"></div>
                <p>正在加载运输单...</p>
            </div>
        </div>
    </div>
</div>

<!-- 完成运输模态框 -->
<div class="modal fade" id="completeModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-check-circle"></i> 完成运输</h5>
                <button type="button" class="close" data-dismiss="modal" style="color: white; opacity: 1;">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="actualWeight">
                        <i class="fas fa-weight"></i> 实际重量（公斤）
                        <small class="text-muted">（选填）</small>
                    </label>
                    <input type="number" class="form-control" id="actualWeight" 
                           placeholder="请输入实际重量" step="0.01" min="0">
                    <small class="text-muted">如不填写，将保持原有重量数据</small>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
                <button type="button" class="btn btn-primary" onclick="confirmComplete()">
                    <i class="fas fa-check"></i> 确认完成
                </button>
            </div>
        </div>
    </div>
</div>

@section scripts {
<script>
    let currentOrderId = null;

    $(document).ready(function () {
        loadOrders();
    });

    function loadOrders() {
        const status = $('#statusFilter').val();

        $('#ordersContainer').html(`
            <div class="loading-spinner">
                <div class="spinner"></div>
                <p>正在加载运输单...</p>
            </div>
        `);

        $.ajax({
            url: '@Url.Action("GetTransporterOrders", "Staff")',
            type: 'POST',
            data: { status: status },
            success: function (response) {
                if (response.success) {
                    updateStatistics(response.statistics);
                    displayOrders(response.data);
                } else {
                    showAlert('error', response.message || '加载失败');
                }
            },
            error: function () {
                showAlert('error', '网络错误，请稍后重试');
            }
        });
    }

    function updateStatistics(stats) {
        $('#pendingCount').text(stats.pending);
        $('#inTransitCount').text(stats.inTransit);
        $('#completedCount').text(stats.completed);
        $('#totalCount').text(stats.total);
    }

    function displayOrders(orders) {
        if (orders.length === 0) {
            $('#ordersContainer').html(`
                <div class="empty-state">
                    <i class="fas fa-box-open"></i>
                    <h3>暂无运输单</h3>
                    <p>当前筛选条件下没有找到运输单</p>
                </div>
            `);
            return;
        }

        let html = '';
        orders.forEach(order => {
            html += generateOrderCard(order);
        });
        $('#ordersContainer').html(html);
    }

    function generateOrderCard(order) {
        const statusClass = {
            '待接单': 'status-pending',
            '运输中': 'status-in-transit',
            '已完成': 'status-completed'
        }[order.Status] || 'status-pending';

        const statusIcon = {
            '待接单': 'fa-clock',
            '运输中': 'fa-truck-moving',
            '已完成': 'fa-check-circle'
        }[order.Status] || 'fa-clock';

        let actions = '';
        if (order.Status === '待接单') {
            actions = `<button class="btn-action btn-accept" onclick="acceptOrder(${order.TransportOrderID})">
                <i class="fas fa-hand-point-right"></i> 接单
            </button>`;
        } else if (order.Status === '已接单') {
            actions = `<button class="btn-action btn-start" onclick="startTransport(${order.TransportOrderID})">
                <i class="fas fa-play"></i> 开始运输
            </button>`;
        } else if (order.Status === '运输中') {
            actions = `<button class="btn-action btn-complete" onclick="showCompleteModal(${order.TransportOrderID})">
                <i class="fas fa-check"></i> 完成运输
            </button>`;
        }

        return `
            <div class="order-card">
                <div class="order-header">
                    <div class="order-number">
                        <i class="fas fa-file-alt"></i> ${order.OrderNumber}
                    </div>
                    <div class="status-badge ${statusClass}">
                        <i class="fas ${statusIcon}"></i> ${order.Status}
                    </div>
                </div>
                <div class="order-details">
                    <div class="detail-item">
                        <i class="fas fa-map-marker-alt detail-icon"></i>
                        <div class="detail-content">
                            <div class="detail-label">取货地址</div>
                            <div class="detail-value">${order.PickupAddress}</div>
                        </div>
                    </div>
                    <div class="detail-item">
                        <i class="fas fa-flag-checkered detail-icon"></i>
                        <div class="detail-content">
                            <div class="detail-label">目的地</div>
                            <div class="detail-value">${order.DestinationAddress}</div>
                        </div>
                    </div>
                    <div class="detail-item">
                        <i class="fas fa-user detail-icon"></i>
                        <div class="detail-content">
                            <div class="detail-label">联系人</div>
                            <div class="detail-value">${order.ContactPerson}</div>
                        </div>
                    </div>
                    <div class="detail-item">
                        <i class="fas fa-phone detail-icon"></i>
                        <div class="detail-content">
                            <div class="detail-label">联系电话</div>
                            <div class="detail-value">${order.ContactPhone}</div>
                        </div>
                    </div>
                    <div class="detail-item">
                        <i class="fas fa-weight detail-icon"></i>
                        <div class="detail-content">
                            <div class="detail-label">预估重量</div>
                            <div class="detail-value">${order.EstimatedWeight} 公斤</div>
                        </div>
                    </div>
                    <div class="detail-item">
                        <i class="fas fa-calendar detail-icon"></i>
                        <div class="detail-content">
                            <div class="detail-label">创建时间</div>
                            <div class="detail-value">${order.CreatedDate}</div>
                        </div>
                    </div>
                </div>
                ${order.SpecialInstructions ? `
                    <div style="margin-top: 15px; padding: 10px; background: #f8f9fa; border-radius: 8px;">
                        <div class="detail-label"><i class="fas fa-info-circle"></i> 特殊说明</div>
                        <div class="detail-value">${order.SpecialInstructions}</div>
                    </div>
                ` : ''}
                ${actions ? `<div class="order-actions">${actions}</div>` : ''}
            </div>
        `;
    }

    function acceptOrder(orderId) {
        if (!confirm('确认接收此运输单吗？')) return;

        $.ajax({
            url: '@Url.Action("AcceptTransportOrder", "Staff")',
            type: 'POST',
            data: { orderId: orderId },
            success: function (response) {
                if (response.success) {
                    showAlert('success', response.message);
                    loadOrders();
                } else {
                    showAlert('error', response.message);
                }
            },
            error: function () {
                showAlert('error', '网络错误，请稍后重试');
            }
        });
    }

    function startTransport(orderId) {
        if (!confirm('确认开始运输吗？')) return;

        $.ajax({
            url: '@Url.Action("StartTransport", "Staff")',
            type: 'POST',
            data: { orderId: orderId },
            success: function (response) {
                if (response.success) {
                    showAlert('success', response.message);
                    loadOrders();
                } else {
                    showAlert('error', response.message);
                }
            },
            error: function () {
                showAlert('error', '网络错误，请稍后重试');
            }
        });
    }

    function showCompleteModal(orderId) {
        currentOrderId = orderId;
        $('#actualWeight').val('');
        $('#completeModal').modal('show');
    }

    function confirmComplete() {
        const actualWeight = $('#actualWeight').val();

        $.ajax({
            url: '@Url.Action("CompleteTransport", "Staff")',
            type: 'POST',
            data: { 
                orderId: currentOrderId,
                actualWeight: actualWeight || null
            },
            success: function (response) {
                $('#completeModal').modal('hide');
                if (response.success) {
                    showAlert('success', response.message);
                    loadOrders();
                } else {
                    showAlert('error', response.message);
                }
            },
            error: function () {
                $('#completeModal').modal('hide');
                showAlert('error', '网络错误，请稍后重试');
            }
        });
    }

    function showAlert(type, message) {
        const alertClass = type === 'success' ? 'alert-success' : 'alert-error';
        const icon = type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle';

        const alertHtml = `
            <div class="alert-message ${alertClass}">
                <i class="fas ${icon}"></i>
                <span>${message}</span>
            </div>
        `;

        $('#alertContainer').html(alertHtml);

        setTimeout(() => {
            $('#alertContainer').html('');
        }, 5000);
    }
</script>
}
